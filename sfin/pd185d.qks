;-------------------------------------------------------------------------------
;
; Initialise la valeur du champ epaisseur résultante
;

PROCEDURE INPUT DOSEPARES
BEGIN
  IF 0 = SIZE(FIELDTEXT)
  THEN BEGIN
    LET FIELDTEXT = ASCII(PDIEPA OF PDI_AVANT)
  END
END


;-------------------------------------------------------------------------------
;
; Assigne une valeur par défauts pour le champ
;

PROCEDURE INPUT DOSCODFIN002

BEGIN
  IF 0 = SIZE(FIELDTEXT)
  THEN BEGIN
    LET DOSCODFIN002     OF PDDET_OPER_SURF = TYFCODFIN        OF PDI_AVANT
  END
END


;-------------------------------------------------------------------------------
;
; Valide que le fini de surface ou l'epaisseur resultante ont été modifié
;

PROCEDURE EDIT T_SILENT
BEGIN
  IF DOSEPARES        OF PDDET_OPER_SURF = PDIEPA           OF PDI_AVANT &
     AND &
     DOSCODFIN002     OF PDDET_OPER_SURF = TYFCODFIN        OF PDI_AVANT
  THEN BEGIN
    ERROR 3027 ; Ni l'épaisseur, ni le fini de surface n'ont été modifié
  END
END


;-------------------------------------------------------------------------------
;
; Valide les traitements permis par écran et par usager.
;

PROCEDURE PREUPDATE
BEGIN
  ;
  ; Validation de la destruction
  ;
  IF     DELETEDRECORD OF PDDET_OPER_SURF &
     AND TZ_SECDEL = "0"
  THEN ERROR 1
  ;
  ; Validation de la modification.
  ;
  IF     ALTEREDRECORD     OF PDDET_OPER_SURF &
     AND NOT NEWRECORD     OF PDDET_OPER_SURF &
     AND NOT DELETEDRECORD OF PDDET_OPER_SURF &
     AND TZ_SECMOD = "0"
  THEN ERROR 2

  FOR PDDET_OPER_SURF
  BEGIN
    ;
    ; Valide les dimension minimum et maximum pour un produit dimension
    ;
    IF DOSEPARES        OF PDDET_OPER_SURF  > T_DIM_MAX_EPA_PD &
       OR &
       DOSEPARES        OF PDDET_OPER_SURF  < T_DIM_MIN_EPA_PD
    THEN BEGIN
      ERROR 2962 ; Cette dimension est hors des limites
    END
    ;
    ; Calcul du volume commandé précedant
    ;
    LET TZ_LARGEUR              = DOSLON           OF PDDET_OPER_SURF
    LET TZ_HAUTEUR              = DOSHAU           OF PDDET_OPER_SURF
    LET TZ_EPAISSEUR            = DOSEPA           OF PDDET_OPER_SURF
    DO INTERNAL CALVOL
    LET PDIVOLMC3        OF PDI_APRES = TZ_VOLUME
    LET PDISURMC2        OF PDI_APRES = TZ_MC2
  END
END


