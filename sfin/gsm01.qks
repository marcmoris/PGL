SUBSCREEN gs153  HIDDEN ID 45 &
@IF FRANCAIS
    LABEL "Codes modules             "
@ELSE
    LABEL "Module Codes              "
@ENDIF

DRAW 20,1 TO 20,80
SKIP TO LINE 22
ALIGN(32,32)
SUBSCREEN gsm02   HIDDEN MODE F ID 50 &
                  PASSING D_XCMCLE,D_MOD_L &
@IF FRANCAIS
    LABEL "Listes et Rapports"
@ELSE
    LABEL "Lists and Reports "
@ENDIF
SKIP

SUBSCREEN gsm02   HIDDEN MODE F ID 55 &
                  PASSING D_XCMCLE,D_MOD_P &
@IF FRANCAIS
    LABEL "    Procédures    "
@ELSE
    LABEL "    Procedures    "
@ENDIF


;-------------------------------------------------------------------------------
;
;
; On utilise la sécurité standard seulement si le Holding a déjà été définie.
; C'est le menu précédent qui nous indique la présence du Holding.
;
;
PROCEDURE INITIALIZE
BEGIN
  IF T_FLGHLDOK = "1"
  THEN BEGIN
    USE ussececr NOLIST
  END
END

