SCREEN gp001e ACTIONBAR &
              MODE LABEL "" AT 2,132 &
              NOACTION FIELDMARK RETAIN STARTUP &
              FROM 1,1 TO 23,132 &
              HELP POPUP FROM 4,9 TO 20,72 &
              RECEIVING T_CIECLEMNU, &
                        T_CIENOM   , &
                        GPPROJETS

TEMPORARY T_CIECLEMNU CHARACTER SIZE 4  RESET AT STARTUP ; Compagnie du menu
TEMPORARY T_CIENOM    CHARACTER SIZE 40 RESET AT STARTUP ; Compagnie du menu

TRANSACTION T_PBC_VISUEL COMMIT ON UPDATE &
                         READ WRITE &
                         RESERVING FOR SHARE WRITE GPPRO_BDG_CTB IN DICT

USE ussectmp NOLIST     ; Variable pour la securite
    "GP001E"            ; Nom de l'écran

USE gp001e.hlp NOLIST   ; Use servant à la documentation de l'écran


USE usactecr NOLIST     ; Actionbar standard dans les écrans pleine
                        ; page et sous-ecran


;------------------------------------
; Fichier fiche de projet
;------------------------------------
FILE GPPROJETS              MASTER



;----------------------------
; Fichier budget comptable
;----------------------------
FILE GPPRO_BDG_CTB          PRIMARY   &

     TRANSACTION T_PBC_VISUEL FOR PROCESS, QUERY, UPDATE &

                            OCCURS 16 &
                            NOITEMS

  ACCESS  VIA     CIECLE, &
                  PRJCLE, &
                  CPTCLE, &
                  UNACLE  &
          USING   CIECLE OF GPPROJETS, &
                  PRJCLE OF GPPROJETS, &
                  CPTCLE OF GPPRO_BDG_CTB, &
                  UNACLE OF GPPRO_BDG_CTB  &
          REQUEST CPTCLE, &
                  UNACLE  &
          ORDERBY CPTCLE, &
                  UNACLE

  ACCESS  VIA     CIECLE, &
                  PRJCLE, &
                  CPTCLE  &
          USING   CIECLE OF GPPROJETS, &
                  PRJCLE OF GPPROJETS, &
                  CPTCLE OF GPPRO_BDG_CTB &
          REQUEST CPTCLE  &
          ORDERBY CPTCLE, &
                  UNACLE

  ACCESS  VIA     CIECLE, &
                  PRJCLE  &
          USING   CIECLE OF GPPROJETS, &
                  PRJCLE OF GPPROJETS  &
          ORDERBY CPTCLE, &
                  UNACLE


;-------------------------------
; Fichier unité administrative
;-------------------------------
FILE MCUNITE_ADM            REFERENCE

  ACCESS  VIA   CIECLE, &
                UNACLE  &
          USING CIECLE OF GPPRO_BDG_CTB, &
                UNACLE OF GPPRO_BDG_CTB


;-----------------------------------------
; Fichier charte de l'unite administrative
;-----------------------------------------
FILE MCCHARTE_UNA           REFERENCE

  ACCESS  VIA   CPTCLE, &
                CIECLE, &
                UNACLE  &
          USING CPTCLE OF GPPRO_BDG_CTB, &
                CIECLE OF GPPRO_BDG_CTB, &
                UNACLE OF GPPRO_BDG_CTB


;-------------------------------
; Fichier compte / client
;-------------------------------
FILE MCCOMPTE               REFERENCE

  ACCESS  VIA   CPTCLE  &
          USING CPTCLE OF GPPRO_BDG_CTB


;-------------------------------------------------------------------------------
;

DEFINE D_MNTTOT      FLOAT SIZE 8 = PBCMNTENG OF GPPRO_BDG_CTB + &
                                    PBCMNTREE OF GPPRO_BDG_CTB

DEFINE D_MNTBDG      FLOAT SIZE 8 = PBCMNTBDG    OF GPPRO_BDG_CTB   &
                                 IF PRJPBCDATAPP OF GPPROJETS = 0   &
                               ELSE PBCMNTBDGREV OF GPPRO_BDG_CTB

DEFINE D_MNTDIS      FLOAT SIZE 8 = D_MNTBDG - D_MNTTOT

DEFINE DZ_CIECLE CHARACTER SIZE 4 = T_CIECLEMNU
DEFINE DZ_CIENOM CHARACTER SIZE 40 = CENTER( T_CIENOM )

TEMPORARY T_CIECLE     CHAR*4
TEMPORARY T_PRJCLE     CHAR*8
TEMPORARY T_CPTCLE     CHAR*6
TEMPORARY T_UNACLE     CHAR*8

USE usdrw132 NOLIST
USE ustit132 NOLIST
USE ushilite NOLIST

SKIP

TITLE &
