FIELD D_MNTBDG                                        &
      DISPLAY                                         &
      PICTURE "^^^,^^^,^^^.^^ "                       &
      TRAILING SIGN "-" SIGNIFICANCE 5

FIELD D_MNTDIS                                        &
      DISPLAY                                         &
      PICTURE "^^^,^^^,^^^.^^ "                       &
      TRAILING SIGN "-" SIGNIFICANCE 5

CLUSTER


;-------------------------------------------------------------------------------
;
; Appel du programme d'information comptable détaillé. (ENGAGE)
;
;
PROCEDURE INPUT PBCMNTENG
BEGIN
  IF 0 <> SIZE(FIELDTEXT)
  THEN BEGIN
    IF 0 <> INDEX(FIELDTEXT,"*")
    THEN BEGIN
      LET T_CIECLE = CIECLE OF GPPRO_BDG_CTB
      LET T_PRJCLE = PRJCLE OF GPPRO_BDG_CTB
      LET T_CPTCLE = CPTCLE OF GPPRO_BDG_CTB
      LET T_UNACLE = UNACLE OF GPPRO_BDG_CTB
      RUN SCREEN gp001g MODE F PASSING T_CIECLEMNU, T_CIENOM, &
                                       GPPRO_BDG_CTB,         &
                                       GPPROJETS
      LET FIELDTEXT = "0"
    END
    ELSE BEGIN
      LET FIELDTEXT = "0"
      INFO MESS 842; La modification de cet élément n'est pas permise.
    END
  END
END

PROCEDURE EDIT PBCMNTENG
BEGIN
   LET FIELDVALUE = OLDVALUE(PBCMNTENG OF GPPRO_BDG_CTB)
END

;-------------------------------------------------------------------------------
;
; Appel du programme d'information comptable détaillé. (REEL)
;
;
PROCEDURE INPUT PBCMNTREE
BEGIN
  IF 0 <> SIZE(FIELDTEXT)
  THEN BEGIN
    IF 0 <> INDEX(FIELDTEXT,"*")
    THEN BEGIN
      LET T_CIECLE = CIECLE OF GPPRO_BDG_CTB
      LET T_PRJCLE = PRJCLE OF GPPRO_BDG_CTB
      LET T_CPTCLE = CPTCLE OF GPPRO_BDG_CTB
      LET T_UNACLE = UNACLE OF GPPRO_BDG_CTB
      RUN SCREEN gp001f MODE F PASSING T_CIECLEMNU, T_CIENOM, &
                                       GPPRO_BDG_CTB,         &
                                       GPPROJETS
      LET FIELDTEXT = "0"
    END
    ELSE BEGIN
      LET FIELDTEXT = "0"
      INFO MESS 842; La modification de cet élément n'est pas permise.
    END
  END
END

PROCEDURE EDIT PBCMNTREE
BEGIN
   LET FIELDVALUE = OLDVALUE(PBCMNTREE OF GPPRO_BDG_CTB)
END

