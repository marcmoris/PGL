;-------------------------------------------------------------------------------
;
;
;

PROCEDURE INTERNAL MAJ_LIGNE_TRANS
BEGIN
  LET DOSSTU OF PDDET_OPER_SURF = "E"
  GET DOS_OLD   OPTIONAL     &
    VIA     CIECLE,          &
            OSUNUMRAP,       &
            DOSNUMLIG        &
    USING   T_CIECLEMNU,                          &
            OSUNUMRAP        OF PDOPERATION_SURF, &
            DOSNUMLIG        OF PDDET_OPER_SURF
  IF ACCESSOK
  THEN BEGIN
    GET DOS_MAJ OPTIONAL       &
      VIA     CIECLE,          &
              OSUNUMRAP,       &
              DOSNUMLIG,       &
              DOSSTU           &
      USING   T_CIECLEMNU,                          &
              OSUNUMRAP        OF PDOPERATION_SURF, &
              DOSNUMLIG        OF PDDET_OPER_SURF,  &
              "M"
    IF NOT ACCESSOK
    THEN BEGIN
      IF  T_FLGCHGTRA        = "1"
      THEN BEGIN
        ;
        ; Remet la tranche précédante à son état initial
        ;
        LET CIECLE       OF DOS_MAJ = T_CIECLEMNU
        LET OSUNUMRAP    OF DOS_MAJ = OSUNUMRAP    OF DOS_OLD
        LET DOSNUMLIG    OF DOS_MAJ = DOSNUMLIG    OF DOS_OLD
        LET DOSSTU       OF DOS_MAJ = "M"
        LET TPDTYPPRD    OF DOS_MAJ = TPDTYPPRD    OF DOS_OLD
        LET TRANUMTRA002 OF DOS_MAJ = TRANUMTRA002 OF DOS_OLD
        LET DOSLON       OF DOS_MAJ = DOSLON       OF DOS_OLD
        LET DOSHAU       OF DOS_MAJ = DOSHAU       OF DOS_OLD
        LET DOSEPA       OF DOS_MAJ = DOSEPA       OF DOS_OLD
        LET TGRCODGRA    OF DOS_MAJ = TGRCODGRA    OF DOS_OLD
        LET DOSCODFIN001 OF DOS_MAJ = DOSCODFIN001 OF DOS_OLD
        LET DOSCODFIN002 OF DOS_MAJ = DOSCODFIN001 OF DOS_OLD
        LET DOSEPARES    OF DOS_MAJ = DOSEPA       OF DOS_OLD
        LET DOSPRD       OF DOS_MAJ = DOSPRD       OF DOS_OLD
        LET DOSHREDIS    OF DOS_MAJ = DOSHREDIS    OF DOS_OLD
        LET DOSACCERR    OF DOS_MAJ = DOSACCERR    OF DOS_OLD
      END
      ELSE BEGIN
        ;
        ; modifie la tranche
        ;
        LET OSUNUMRAP    OF DOS_MAJ = OSUNUMRAP    OF DOS_OLD
        LET DOSNUMLIG    OF DOS_MAJ = DOSNUMLIG    OF DOS_OLD
        LET DOSSTU       OF DOS_MAJ = "M"
        LET TPDTYPPRD    OF DOS_MAJ = TPDTYPPRD    OF DOS_OLD
        LET TRANUMTRA002 OF DOS_MAJ = TRANUMTRA002 OF DOS_OLD
        LET DOSLON       OF DOS_MAJ = DOSLON       OF DOS_OLD
        LET DOSHAU       OF DOS_MAJ = DOSHAU       OF DOS_OLD
        LET DOSEPA       OF DOS_MAJ = DOSEPA       OF DOS_OLD
        LET TGRCODGRA    OF DOS_MAJ = TGRCODGRA    OF DOS_OLD
        LET DOSCODFIN001 OF DOS_MAJ = DOSCODFIN001 OF DOS_OLD
        LET DOSCODFIN002 OF DOS_MAJ = DOSCODFIN002 OF DOS_OLD
        LET DOSEPARES    OF DOS_MAJ = DOSEPARES    OF DOS_OLD
        LET DOSPRD       OF DOS_MAJ = DOSPRD       OF DOS_OLD
        LET DOSHREDIS    OF DOS_MAJ = DOSHREDIS    OF DOS_OLD
        LET DOSACCERR    OF DOS_MAJ = DOSACCERR    OF DOS_OLD
      END
      PUT DOS_MAJ
    END
  END
  ELSE BEGIN
    ERROR "PROBLÈME TECHNIQUE"
  END
END

PROCEDURE INTERNAL VALIDE
BEGIN
  WHILE RETRIEVING OOS_VALIDE
  BEGIN
    IF (OSUDEP OF PDOPERATION_SURF <> OOSHREDEB OF OOS_VALIDE   &
        AND                                                        &
        OSUARR OF PDOPERATION_SURF <> OOSHREFIN OF OOS_VALIDE)
    THEN BEGIN
      IF ( (OSUDEP OF PDOPERATION_SURF >= OOSHREDEB OF OOS_VALIDE     &
            AND                                                          &
            OSUARR OF PDOPERATION_SURF <= OOSHREFIN OF OOS_VALIDE )   &
          OR                                                             &
           (OSUDEP OF PDOPERATION_SURF >= OOSHREDEB OF OOS_VALIDE     &
            AND                                                          &
            OSUARR OF PDOPERATION_SURF <= OOSHREFIN OF OOS_VALIDE ))  &
         OR                                                              &
           (OSUDEP OF PDOPERATION_SURF <= OOSHREDEB OF OOS_VALIDE     &
            AND                                                          &
            OSUARR OF PDOPERATION_SURF >= OOSHREFIN OF OOS_VALIDE )
      THEN BEGIN
        ERROR 3005 ; Cette plage horraire chevauche une plage déjà enregistrer
       END
    END
  END
END

;-------------------------------------------------------------------------------
;
; Valide les traitements permis par écran et par usager.
;

PROCEDURE PREUPDATE
BEGIN
  ;
  ; Validation de la destruction
  ;
  IF     DELETEDRECORD OF PDOPERATION_SURF &
     AND TZ_SECDEL = "0"
  THEN ERROR 1
  ;
  ; Validation de la modification.
  ;
  IF     ALTEREDRECORD     OF PDOPERATION_SURF &
     AND NOT NEWRECORD     OF PDOPERATION_SURF &
     AND NOT DELETEDRECORD OF PDOPERATION_SURF &
     AND TZ_SECMOD = "0"
  THEN ERROR 2
  ;
  ; Calcul de la durée du traitement pour l'opération de surface
  ;
  LET TZ_DATDEB   = OSUDATPRD        OF PDOPERATION_SURF
  LET TZ_TMPDEB   = ASCII(OSUDEP     OF PDOPERATION_SURF,4) + "00"
  LET TZ_DATFIN   = OSUDATPRD        OF PDOPERATION_SURF
  LET TZ_TMPFIN   = ASCII(OSUARR     OF PDOPERATION_SURF,4) + "00"

  LET OSUDURSEC OF PDOPERATION_SURF = DZ_DIFSECTOT

;  DO INTERNAL VALIDE

  FOR PDDET_OPER_SURF
  BEGIN
    ;
    ; Validation de la destruction
    ;
    IF     DELETEDRECORD OF PDDET_OPER_SURF &
       AND TZ_SECDEL = "0"
    THEN ERROR 1
    ;
    ; Validation de la modification.
    ;
    IF     ALTEREDRECORD     OF PDDET_OPER_SURF &
       AND NOT NEWRECORD     OF PDDET_OPER_SURF &
       AND NOT DELETEDRECORD OF PDDET_OPER_SURF &
       AND TZ_SECMOD = "0"
    THEN ERROR 2
    ;
    ;
  END
  ;
  ; Valide les lignes de détail du rapport
  ;
  FOR PDDET_OPER_SURF
  BEGIN
    ;
    ; Si la ligne à déjà été valider il faut revalider la ligne avant
    ; d'effectuer la mise à jour de la pièce
    ;
    IF DOSSTU OF PDDET_OPER_SURF = "V"
    THEN BEGIN
      LET DOSSTU OF PDDET_OPER_SURF = "E"
      IF OSUSTU OF PDOPERATION_SURF = "V"
      THEN BEGIN
        LET OSUSTU OF PDOPERATION_SURF = "E"
        DISPLAY OSUSTU OF PDOPERATION_SURF
        DISPLAY CBIDSC OF A_CBI_OSUSTU
      END
    END
    ;
    ; Si la ligne à déjà été transferrer il faut replacer la pièce dans
    ; l'état initial avant de faire la nouvelle mise à jour
    ;
    IF DOSSTU OF PDDET_OPER_SURF = "T" &
       AND &
       ALTEREDRECORD OF PDDET_OPER_SURF
    THEN BEGIN
      DO INTERNAL MAJ_LIGNE_TRANS
    END

    IF ALTEREDRECORD OF PDDET_OPER_SURF
    THEN BEGIN
      ;
      ; Si le rapport à déjà été valider il faut reprendre la validation
      ;
      IF OSUSTU OF PDOPERATION_SURF = "V"
      THEN BEGIN
        LET OSUSTU OF PDOPERATION_SURF = "E" ; En cours , il faut reprendre la validation
        DISPLAY OSUSTU OF PDOPERATION_SURF
        DISPLAY CBIDSC OF A_CBI_OSUSTU
      END
      ;
      ; Si le rapport à été transferré il devient en correction
      ;
      IF OSUSTU OF PDOPERATION_SURF = "T"
      THEN BEGIN
        LET OSUSTU OF PDOPERATION_SURF = "C"  ; Correction après transfert
        DISPLAY OSUSTU OF PDOPERATION_SURF
        DISPLAY CBIDSC OF A_CBI_OSUSTU
      END
    END

    IF NEWRECORD OF PDDET_OPER_SURF
    THEN BEGIN
      ;
      ; Si le rapport à été transferré il devient en correction
      ;
      IF OSUSTU OF PDOPERATION_SURF = "T"
      THEN BEGIN
        LET OSUSTU OF PDOPERATION_SURF = "C"  ; Correction après transfert
        DISPLAY OSUSTU OF PDOPERATION_SURF
        DISPLAY CBIDSC OF A_CBI_OSUSTU
      END
    END

  END
  ;
  ; Calcul de la durée du traitement pour l'opération de surface
  ;
  LET TZ_DATDEB   = OSUDATPRD        OF PDOPERATION_SURF
  LET TZ_TMPDEB   = ASCII(OSUDEP     OF PDOPERATION_SURF,4) + "00"
  LET TZ_DATFIN   = OSUDATPRD        OF PDOPERATION_SURF
  LET TZ_TMPFIN   = ASCII(OSUARR     OF PDOPERATION_SURF,4) + "00"

  LET OSUDURSEC OF PDOPERATION_SURF = DZ_DIFSECTOT

  ;
  ; Incrémentation du numéro de séquence
  ;
  IF 0 = OSUNUMRAP        OF PDOPERATION_SURF
  THEN BEGIN
    START TRANSACTION NO_SEQ
    GET PDSEQ_OPER_SURF OPTIONAL        &
      VIA   CIECLE                      &
      USING T_CIECLEMNU
    IF NOT ACCESSOK
    THEN BEGIN
      LET CIECLE OF PDSEQ_OPER_SURF = T_CIECLEMNU
    END
    LET SEONUMRAP     OF PDSEQ_OPER_SURF  = SEONUMRAP OF PDSEQ_OPER_SURF + 1
    LET OSUNUMRAP     OF PDOPERATION_SURF = SEONUMRAP OF PDSEQ_OPER_SURF
    PUT PDSEQ_OPER_SURF
    DISPLAY OSUNUMRAP     OF PDOPERATION_SURF
  END

END


