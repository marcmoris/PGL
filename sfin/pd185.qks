FILE PDSEQ_OPER_SURF DESIGNER &
                     TRANSACTION NO_SEQ

;-------------------------------------------------------------------------------
;
; Opération de surface validation des plages horraire pour le rapport
;

FILE PDOPERATION_SURF DESIGNER ALIAS OSU_OPERATION_SURFACE

  ACCESS VIA     CIECLE,                               &
                 OSUDATPRD,                            &
                 MOPCODMAC                             &
         USING   T_CIECLEMNU,                          &
                 OSUDATPRD        OF PDOPERATION_SURF, &
                 MOPCODMAC        OF PDOPERATION_SURF

  ;
  ; Sélectionne si une des deux bornes du nouvel enregistrement se retrouve
  ; parmis l'intervale déjà enregistré.
  ;

  SELECT IF ( (OSUDEP OF PDOPERATION_SURF >= OSUDEP OF OSU_OPERATION_SURFACE   &
               AND                                                             &
               OSUDEP OF PDOPERATION_SURF <= OSUARR OF OSU_OPERATION_SURFACE)  &
             OR                                                                &
              (OSUARR OF PDOPERATION_SURF >= OSUDEP OF OSU_OPERATION_SURFACE   &
               AND                                                             &
               OSUARR OF PDOPERATION_SURF <= OSUARR OF OSU_OPERATION_SURFACE)) &
            OR                                                                 &
              (OSUDEP OF PDOPERATION_SURF <= OSUDEP OF OSU_OPERATION_SURFACE   &
               AND                                                             &
               OSUARR OF PDOPERATION_SURF >= OSUARR OF OSU_OPERATION_SURFACE)


