;-------------------------------------------------------------------------------
;
; Appel du dépisteur pour le champs.
;

PROCEDURE INPUT DOSCODFIN002
BEGIN
  IF 0 <> INDEX(FIELDTEXT,"*")
  THEN BEGIN
    LET T_TYFCODFIN = FIELDTEXT[1:INDEX(FIELDTEXT,"*") - 1] + "@"
    RUN SCREEN pd101 MODE F &
                     PASSING T_TYFCODFIN, &
                             T_CIECLEMNU
    LET FIELDTEXT = TRUNCATE( T_TYFCODFIN )
  END
  ;
  ; Assignation des valeurs par defaut
  ;
  IF 0 = SIZE(TRUNCATE(FIELDTEXT)) &
     AND &
     ENTRYMODE
  THEN BEGIN
    ;
    ; Assignation de la valeur par défaut si le code de machine est bruleur
    ;
    IF MOPCODMAC        OF PDOPERATION_SURF = "BRU"
    THEN BEGIN
      IF T_DOSCODFIN002_OLD = ""
      THEN BEGIN
        LET FIELDTEXT          = "01" ; Brulé
        LET T_DOSCODFIN002_OLD = FIELDTEXT
      END
      ELSE BEGIN
        LET FIELDTEXT          = T_DOSCODFIN002_OLD
      END
    END
    ;
    ; Assignation de la valeur par défaut si le code de machine est polisseur
    ;
    IF MOPCODMAC        OF PDOPERATION_SURF = "POL"
    THEN BEGIN
      IF T_DOSCODFIN002_OLD = ""
      THEN BEGIN
        LET FIELDTEXT          = "02" ; Poli
        LET T_DOSCODFIN002_OLD = FIELDTEXT
      END
      ELSE BEGIN
        LET FIELDTEXT          = T_DOSCODFIN002_OLD
      END
    END
    ;
    ; Assignation de la valeur par défaut si le code de machine est jet sable
    ;
    IF MOPCODMAC        OF PDOPERATION_SURF = "JET"
    THEN BEGIN
      IF T_DOSCODFIN002_OLD = ""
      THEN BEGIN
        LET FIELDTEXT          = "05" ; Jet de sable
        LET T_DOSCODFIN002_OLD = FIELDTEXT
      END
      ELSE BEGIN
        LET FIELDTEXT          = T_DOSCODFIN002_OLD
      END
    END
    ;
    ; Assignation de la valeur par défaut si le code de machine est guillotine
    ;
    IF MOPCODMAC        OF PDOPERATION_SURF = "GUI"
    THEN BEGIN
      IF T_DOSCODFIN002_OLD = ""
      THEN BEGIN
        LET FIELDTEXT          = "10" ; Guillotine
        LET T_DOSCODFIN002_OLD = FIELDTEXT
      END
      ELSE BEGIN
        LET FIELDTEXT          = T_DOSCODFIN002_OLD
      END
    END
  END
END


