;-------------------------------------------------------------------------------
;
; Initialise la valeur du champ epaisseur résultante
;

PROCEDURE EDIT DOSEPARES
BEGIN
  ;
  ; Si on modifi le numéro de tranche alors on doit mettre à jour les épaisseurs
  ;
  IF T_FLGCHGTRA = "1" AND CORRECTMODE
  THEN BEGIN
    LET FIELDVALUE                   = TRAEPA OF TRA_AVANT
    LET DOSEPA    OF PDDET_OPER_SURF = TRAEPA OF TRA_AVANT
  END
  ;
  ; Valide les dimension minimum et maximum
  ;
  IF TPDTYPPRD OF PDDET_OPER_SURF = "PD"
  THEN BEGIN
    IF FIELDVALUE > T_DIM_MAX_EPA_PD &
       OR &
       FIELDVALUE < T_DIM_MIN_EPA_PD
    THEN BEGIN
      ERROR 2962 ; Cette dimension est hors des limites
    END
  END
  ELSE BEGIN
    IF FIELDVALUE > T_DIM_MAX_EPA_TR &
       OR &
       FIELDVALUE < T_DIM_MIN_EPA_TR
    THEN BEGIN
      ERROR 2962 ; Cette dimension est hors des limites
    END
  END
  ;
  ; On s'assure que l'épaisseur résultante est plus petite ou égale à
  ; l'épaisseur de départ
  ;
  IF FIELDVALUE > DOSEPA OF PDDET_OPER_SURF
  THEN BEGIN
    ERROR 3029 ; L'épaisseur résultante doit être plus petite ou égale a l'épaisseur de départ
  END
END


