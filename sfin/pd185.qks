  ;
  ; Valide les dimensions de produit de dimension
  ;
  IF TPDTYPPRD OF PDDET_OPER_SURF = "PD"
  THEN BEGIN
    IF DOSEPA       OF PDDET_OPER_SURF > T_DIM_MAX_EPA_PD &
       OR &
       DOSEPA       OF PDDET_OPER_SURF < T_DIM_MIN_EPA_PD
    THEN BEGIN
      ERROR 2962 ; Cette dimension est hors des limites
    END
  END
END


