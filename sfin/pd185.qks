FILE PDOPERATION_SURF PRIMARY &
                      NOITEM


  ACCESS VIA     CIECLE,                              &
                 OSUNUMRAP                            &
         USING   T_CIECLEMNU,                         &
                 OSUNUMRAP        OF PDOPERATION_SURF &
         REQUEST OSUNUMRAP        OF PDOPERATION_SURF &
         ORDERBY OSUNUMRAP


  ACCESS VIA     CIECLE,                               &
                 OSUDATPRD,                            &
                 MOPCODMAC,                            &
                 QRTCODQRT                             &
         USING   T_CIECLEMNU,                          &
                 OSUDATPRD        OF PDOPERATION_SURF, &
                 MOPCODMAC        OF PDOPERATION_SURF, &
                 QRTCODQRT        OF PDOPERATION_SURF  &
         REQUEST OSUDATPRD        OF PDOPERATION_SURF, &
                 MOPCODMAC        OF PDOPERATION_SURF, &
                 QRTCODQRT        OF PDOPERATION_SURF  &
         ORDERBY OSUNUMRAP


  ACCESS VIA     CIECLE,                               &
                 OSUDATPRD,                            &
                 MOPCODMAC                             &
         USING   T_CIECLEMNU,                          &
                 OSUDATPRD        OF PDOPERATION_SURF, &
                 MOPCODMAC        OF PDOPERATION_SURF  &
         REQUEST OSUDATPRD        OF PDOPERATION_SURF, &
                 MOPCODMAC        OF PDOPERATION_SURF  &
         ORDERBY OSUNUMRAP


  ACCESS VIA     CIECLE,                               &
                 OSUDATPRD                             &
         USING   T_CIECLEMNU,                          &
                 OSUDATPRD        OF PDOPERATION_SURF  &
         REQUEST OSUDATPRD        OF PDOPERATION_SURF  &
         ORDERBY OSUNUMRAP


  ACCESS VIA     CIECLE                                &
         USING   T_CIECLEMNU                           &
         ORDERBY OSUNUMRAP

  ITEM CIECLE OF PDOPERATION_SURF INITIAL T_CIECLEMNU
  ITEM OSUSTU OF PDOPERATION_SURF INITIAL "E" ; En cours


;-------------------------------------------------------------------------------
;
; Détail opération surface
;

FILE PDDET_OPER_SURF DETAIL &
                     NOITEM  &
                     OCCURS 7

  ACCESS VIA     CIECLE,         &
                 OSUNUMRAP       &
         USING   T_CIECLEMNU,                        &
                 OSUNUMRAP       OF PDOPERATION_SURF &
         ORDERBY OSUNUMRAP,      &
                 DOSNUMLIG,      &
                 DOSSTU


  SELECT IF DOSSTU OF PDDET_OPER_SURF <> "M" &
            AND &
            DOSSTU OF PDDET_OPER_SURF <> "D"


  ITEM CIECLE    OF PDDET_OPER_SURF INITIAL T_CIECLEMNU
  ITEM OSUNUMRAP OF PDDET_OPER_SURF INITIAL OSUNUMRAP OF PDOPERATION_SURF FIXED
  ITEM DOSSTU    OF PDDET_OPER_SURF INITIAL "E" ; En cours


