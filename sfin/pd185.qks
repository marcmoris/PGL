BEGIN
  ;
  ; Permet de modifier le numéro de ligne si ce n'est pas une ligne terminer
  ;
  IF DOSSTU OF PDDET_OPER_SURF = "T"
  THEN BEGIN
    NULL
  END
  ELSE BEGIN
    ACCEPT DOSNUMLIG OF PDDET_OPER_SURF
  END
  DISPLAY DOSSTU OF PDDET_OPER_SURF
  ACCEPT TRANUMTRA002 OF PDDET_OPER_SURF
  IF 0 <> SIZE(TRUNCATE(TRANUMTRA002 OF PDDET_OPER_SURF))
  THEN BEGIN
    LET TPDTYPPRD OF PDDET_OPER_SURF = "TR"
    DISPLAY DOSLON OF PDDET_OPER_SURF
    DISPLAY DOSHAU OF PDDET_OPER_SURF
    DISPLAY DOSEPA OF PDDET_OPER_SURF
    ACCEPT  DOSEPARES OF PDDET_OPER_SURF
    DISPLAY TGRCODGRA OF PDDET_OPER_SURF
    DISPLAY DOSCODFIN001 OF PDDET_OPER_SURF
    ACCEPT  DOSCODFIN002 OF PDDET_OPER_SURF
  END
  ELSE BEGIN
    LET TPDTYPPRD OF PDDET_OPER_SURF = "PD"
    ACCEPT DOSLON OF PDDET_OPER_SURF
    ACCEPT DOSHAU OF PDDET_OPER_SURF
    ACCEPT DOSEPA OF PDDET_OPER_SURF
    ACCEPT DOSQTE OF PDDET_OPER_SURF
    ACCEPT DOSEPARES OF PDDET_OPER_SURF
    ACCEPT TGRCODGRA OF PDDET_OPER_SURF
    ACCEPT DOSCODFIN001 OF PDDET_OPER_SURF
    ACCEPT DOSCODFIN002 OF PDDET_OPER_SURF
  END

  EDIT T_SILENT

  ACCEPT DOSACCERR OF PDDET_OPER_SURF
    ACCEPT  DTRCODDEF    OF PDTRANCHE_DEF

END


