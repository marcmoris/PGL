PROCEDURE INTERNAL DESTRUCTION_PDTRANCHE
BEGIN
  GET EFFACER_TRANCHE VIA TRANUMTRA002, CIECLE USING TRANUMTRA002 OF &
                      PDDET_OPER_SURF, T_CIECLEMNU OPT
  IF ACCESSOK
  THEN BEGIN
         LET OSUDATPRD OF EFFACER_TRANCHE = 0
         PUT EFFACER_TRANCHE RESET
  END
END

;-------------------------------------------------------------------------------
;
; Validation avant destruction
;

PROCEDURE DELETE
BEGIN
  FOR PDDET_OPER_SURF
  BEGIN
    IF OSUSTU OF PDOPERATION_SURF = "E" &
       OR &
       OSUSTU OF PDOPERATION_SURF = "V"
    THEN BEGIN
      IF TPDTYPPRD OF PDDET_OPER_SURF = "TR"
      THEN BEGIN
          DO INTERNAL DESTRUCTION_PDTRANCHE
          DELETE PDDET_OPER_SURF
      END
      ELSE BEGIN
          DELETE PDDET_OPER_SURF
      END
    END


    IF OSUSTU OF PDOPERATION_SURF = "T" &
       OR &
       OSUSTU OF PDOPERATION_SURF = "M" &
       OR &
       OSUSTU OF PDOPERATION_SURF = "C"
    THEN BEGIN
      IF TPDTYPPRD OF PDDET_OPER_SURF = "TR"
      THEN BEGIN
        IF DOSEPA OF PDDET_OPER_SURF = DOSEPARES OF PDDET_OPER_SURF &
           AND &
           DOSCODFIN001 OF PDDET_OPER_SURF = DOSCODFIN002 OF PDDET_OPER_SURF
        THEN BEGIN
          LET DOSSTU OF PDDET_OPER_SURF = "D"
          LET OSUSTU OF PDOPERATION_SURF = "C"  ; Correction après transfert
          DISPLAY OSUSTU OF PDOPERATION_SURF
          DISPLAY CBIDSC OF A_CBI_OSUSTU
        END
        ELSE BEGIN
         ERROR 3142 ; On ne peut détruire une ligne de détail qui modifie la tranche et qui est transférré
        END
      END
      ELSE BEGIN
        DO INTERNAL DESTRUCTION_PDTRANCHE
        DELETE PDDET_OPER_SURF
      END
    END
    DO INTERNAL DESTRUCTION_PDTRANCHE
  END
END


