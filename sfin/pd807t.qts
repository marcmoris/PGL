;-------------------------------------------------------------------------------------------------------------
; MP-01-12-05_DD. - MP-02-02-18_D200215.
;
; Procédure de calcul du montant de commissions payés no 1.
;
REQUEST cal_com_pay_1
;
; Accès à la base de données.
;

ACCESS pdcomman_interne link comdev       of pdcomman_interne           &
                          to devcle       of mcdevise                   & ; Table des devises.
                                                                      
                        link ciecle       of  pdcomman_interne        , &
                             foucle       of  pdcomman_interne        , & ; Lien via l'agent no 1.
                             pjtabr       of  pdcomman_interne        , &
                             pjtann       of  pdcomman_interne        , &
                             comnumcomint of  pdcomman_interne          &
                          to capciecle                                , &
                             foucle                                   , &
                             pjtabr                                   , &
                             pjtann                                   , &
                             comnumcomint of  cpcpt_a_payer        opt  & ; Table des factures des comptes à payer (C/P).
                                                                      
                        link foucle       of  cpcpt_a_payer             &
                          to foucle       of *yfou                 opt  & ; Subfile indexé - Fournisseur et devise (agents).
                                                                      
                        link devcle       of  yfou                      &
                          to devcle       of  mcdevise alias a_dev opt  & ; Table des devises.

                        link "----"                                   , & 
                             foucle       of  cpcpt_a_payer           , &
                             capcle       of  cpcpt_a_payer             &
                          to fouciecle                                , & 
                             foucle                                   , &
                             capcle       of  vcap_sld             opt     ; Vue sur les factures et l'historique des paiements (C/P).
;
; Sélection selon les paramètres.
;
CHOOSE ciecle    parm, & ; Code de compagnie.
       foucle    parm, & ; Code d'agent no 1.
       comdev    parm, & ; Code de devise.
       pjtabr    parm, & ; Code de projet.
       comnumcom parm    ; Code de commande.

;
; Ne sélectionner que les commandes internes pour lesquelles un calcul automatique du montant de commission no 1 est exigé
;
SELECT pdcomman_interne if comcalaut of pdcomman_interne <> "0"

SORTED on ciecle       of pdcomman_interne & ; Code de compagnie.
       on pjtabr       of pdcomman_interne & ; Code de projet.
       on pjtann       of pdcomman_interne & ; Année du projet.
       on comnumcomint of pdcomman_interne   ; Numéro de commande.

temp t_capmntnet float size 08 ; Montant net de facture (commission payée) par commande interne (projet).
temp t_devtau    float size 08 ; Taux de change.

; Cumul du montant de commissions payé uniquement pour les factures journalisées dont le montant payé est différent de zéro

item t_capmntnet subtotal capmntnet of cpcpt_a_payer                                  &
                       if 0 <> v_capmntpye  of vcap_sld + v_capmntesc of vcap_sld and &
                          0 <> capdatjou    of cpcpt_a_payer                          &
                    reset at   comnumcomint of pdcomman_interne

item t_devtau = devtau of a_dev                                                       &
             if devcle of mcdevise  = "CAN" and devcle of mcdevise <> devcle of a_dev &
           else 1 / devtau of a_dev                                                   &
             if devcle of mcdevise <> "CAN" and devcle of mcdevise <> devcle of a_dev &
           else 1
             
OUTPUT pdcomman_interne update at comnumcomint of pdcomman_interne
  item commnt02 of pdcomman_interne final round(t_capmntnet * t_devtau) ; Mise à jour du montant de commission no 1.

;-------------------------------------------------------------------------------------------------------------
; MP-01-12-05_DD. - MP-02-02-18_D200215.
;
; Procédure de calcul du montant de commissions payés no 2.
;
