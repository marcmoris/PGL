        FIXED

FIELD OSUSTU           OF PDOPERATION_SURF &
LABEL "Statut.......:"&
        FIXED


FIELD CBIDSC           OF A_CBI_OSUSTU     &
        DISPLAY                            &
        FIXED


DRAW 11,2 TO 11,79


SKIP TO LINE 11


TITLE &
@IF FRANCAIS
      " Tranches " &
@ELSE
      " %%%Tranches " &
@ENDIF
      CENTERED AT ,1


SKIP TO LINE 13

TITLE &
@IF FRANCAIS
    "                                           Epai.  Type     Type fini" &
@ELSE
    "%%%                                        Epai.  Type     Type fini" &
@ENDIF
     AT ,2

skip

TITLE &
@IF FRANCAIS
    "   No tranche   Long.    Haut.    Epai.    Res.   granit  avant après Err" &
@ELSE
    "%%%No tranche   Long.    Haut.    Epai.    Res.   granit  avant après Err" &
@ENDIF
     AT ,2

SKIP TO LINE 15


ALIGN (05,05,06) (,,18) (,,27) (,,36) (,,45) (,,54) (,,61) (,,67) (,,73)


CLUSTER OCCURS WITH PDDET_OPER_SURF  ID BASE 40


FIELD TRANUMTRA002     OF PDDET_OPER_SURF  &
        HIDDEN                             &
        LABEL " "                          &
        NUMERIC                            &
        BWZ                                &
        REQUIRED NOCHANGE                  &
        LOOKUP ON TRA_AVANT                &
          MESSAGE 2940 , & ; Ce numéro de tranche n'existe pas
               NOTON PDDET_OPER_SURF       &
          VIA   CIECLE,                    &
                OSUNUMRAP,                 &
                TRANUMTRA002               &
          USING T_CIECLEMNU,                      &
                OSUNUMRAP    OF PDOPERATION_SURF, &
                TRANUMTRA002 OF PDDET_OPER_SURF   &
          MESSAGE 3119 ; Ce numéro de tranche existe déjà pour ce rapport


FIELD DOSLON           OF PDDET_OPER_SURF  &
        HIDDEN                             &
        NOLABEL                            &
        DISPLAY SIZE 5


FIELD DOSHAU           OF PDDET_OPER_SURF  &
        HIDDEN                             &
        NOLABEL                            &
        DISPLAY SIZE 5


FIELD DOSEPA           OF PDDET_OPER_SURF  &
        HIDDEN                             &
        NOLABEL                            &
        DISPLAY SIZE 5


FIELD DOSEPARES        OF PDDET_OPER_SURF  &
        HIDDEN                             &
        NOLABEL                            &
        DUPLICATE                          SIZE 5


FIELD TGRCODGRA        OF TRA_AVANT        &
        HIDDEN                             &
        NOLABEL                            &
        DISPLAY


FIELD TYFCODFIN        OF TRA_AVANT        &
        HIDDEN                             &
        NOLABEL                            &
        DISPLAY


FIELD DOSCODFIN002     OF PDDET_OPER_SURF  &
        HIDDEN                             &
        NOLABEL                            &
        DUPLICATE


FIELD T_SILENT                             &
        SILENT


FIELD DOSACCERR        OF PDDET_OPER_SURF  &
        HIDDEN                             &
        NOLABEL                            &
        DUPLICATE


CLUSTER


;-------------------------------------------------------------------------------
;
; Valide la sécurité d'accès de l'écran.
;

PROCEDURE INITIALIZE
BEGIN
  USE ussececr NOLIST
END


;-------------------------------------------------------------------------------
;
; Procédure pour le calcul du volume d'une pièce de granit
;

USE uscalvol NOLIST


;-------------------------------------------------------------------------------
;
; Appel du dépisteur (pop-up) pour le champ.
;

PROCEDURE INPUT TRANUMTRA002
BEGIN
  IF 0 <> INDEX(FIELDTEXT,"*")
  THEN BEGIN
    LET T_COD          = 0 ; Toutes les tranches
    LET T_TRANUMTRA002 = FIELDTEXT[1:INDEX(FIELDTEXT,"*") - 1] + "@"
    RUN SCREEN pd122 MODE F &
                     PASSING T_TRANUMTRA002, &
                             T_COD,          &
                             T_CIECLEMNU
    LET FIELDTEXT = TRUNCATE( T_TRANUMTRA002 )
  END
END


;-------------------------------------------------------------------------------
;
; Initialise les dimensions pour affichage
;

PROCEDURE PROCESS TRANUMTRA002
BEGIN
  LET DOSLON           OF PDDET_OPER_SURF  = TRALON OF TRA_AVANT
  LET DOSHAU           OF PDDET_OPER_SURF  = TRAHAU OF TRA_AVANT
  LET DOSEPA           OF PDDET_OPER_SURF  = TRAEPA OF TRA_AVANT
END


;-------------------------------------------------------------------------------
;
; Initialise la valeur du champ epaisseur résultante
;

PROCEDURE INPUT DOSEPARES
BEGIN
  IF 0 = SIZE(FIELDTEXT) AND ENTRYMODE AND NOT CHANGEMODE
  THEN BEGIN
    LET FIELDTEXT = ASCII(TRAEPA OF TRA_AVANT)
  END
END


;-------------------------------------------------------------------------------
;
; Initialise la valeur du champ epaisseur résultante
;

PROCEDURE EDIT DOSEPARES
BEGIN
  IF FIELDVALUE > TRAEPA OF TRA_AVANT
  THEN BEGIN
    ERROR 3030 ; L'épaisseur résultante doit être plus petite ou égale a l'épaisseur de départ
  END
END


;-------------------------------------------------------------------------------
;
; Assigne une valeur par défauts pour le champ
;

PROCEDURE INPUT DOSCODFIN002

BEGIN
  IF 0 = SIZE(FIELDTEXT)
  THEN BEGIN
    LET DOSCODFIN002     OF PDDET_OPER_SURF = TYFCODFIN        OF TRA_AVANT
  END
END


;-------------------------------------------------------------------------------
;
; Valide que le fini de surface ou l'epaisseur resultante ont été modifié
;

PROCEDURE EDIT T_SILENT
BEGIN
  IF DOSEPARES        OF PDDET_OPER_SURF = TRAEPA           OF TRA_AVANT &
     AND &
     DOSCODFIN002     OF PDDET_OPER_SURF = TYFCODFIN        OF TRA_AVANT
  THEN BEGIN
    ERROR 3027 ; Ni l'épaisseur, ni le fini de surface n'ont été modifié
  END
END


;-------------------------------------------------------------------------------
;
; Valide les traitements permis par écran et par usager.
;

PROCEDURE PREUPDATE
BEGIN
  FOR PDDET_OPER_SURF
  BEGIN
    ;
    ; Validation de la destruction
    ;
    IF     DELETEDRECORD OF PDDET_OPER_SURF &
       AND TZ_SECDEL = "0"
    THEN ERROR 1
    ;
    ; Validation de la modification.
    ;
    IF     ALTEREDRECORD     OF PDDET_OPER_SURF &
       AND NOT NEWRECORD     OF PDDET_OPER_SURF &
       AND NOT DELETEDRECORD OF PDDET_OPER_SURF &
       AND TZ_SECMOD = "0"
    THEN ERROR 2
    ;
    ; Valide les dimension minimum et maximum pour un produit dimension
    ;
    IF DOSEPARES        OF PDDET_OPER_SURF  > T_DIM_MAX_EPA_TR &
       OR &
       DOSEPARES        OF PDDET_OPER_SURF  < T_DIM_MIN_EPA_TR
    THEN BEGIN
      ERROR 2962 ; Cette dimension est hors des limites
    END
  END
  ;
  ; Valide les lignes de détail du rapport
  ;
  FOR PDDET_OPER_SURF
  BEGIN
    ;
    ; Si la ligne à déjà été valider il faut valider les modification avant
    ; d'effectuer la mise à jour de la pièce
    ;
    IF DOSSTU OF PDDET_OPER_SURF = "V"
    THEN BEGIN
      LET DOSSTU OF PDDET_OPER_SURF = "E"
      IF OSUSTU OF PDOPERATION_SURF = "V"
      THEN BEGIN
        LET OSUSTU OF PDOPERATION_SURF = "E"
      END
    END
    ;
    ; Si la ligne à déjà été transferrer il faut replacer la pièce dans
    ; l'état initial avant de faire la nouvelle mise à jour
    ;
    IF DOSSTU OF PDDET_OPER_SURF = "T"
    THEN BEGIN
      LET DOSSTU OF PDDET_OPER_SURF = "E"
      GET DOS_OLD   OPTIONAL     &
        VIA     CIECLE,          &
                OSUNUMRAP,       &
                TRANUMTRA002     &
        USING   T_CIECLEMNU,                          &
                OSUNUMRAP        OF PDOPERATION_SURF, &
                TRANUMTRA002     OF PDDET_OPER_SURF
      IF ACCESSOK
      THEN BEGIN
        GET DOS_MAJ OPTIONAL       &
          VIA     CIECLE,          &
                  OSUNUMRAP,       &
                  TRANUMTRA002,    &
                  DOSSTU           &
          USING   T_CIECLEMNU,                          &
                  OSUNUMRAP        OF PDOPERATION_SURF, &
                  TRANUMTRA002     OF PDDET_OPER_SURF,  &
                  "M"
        IF NOT ACCESSOK
        THEN BEGIN
          LET CIECLE       OF DOS_MAJ = T_CIECLEMNU
          LET OSUNUMRAP    OF DOS_MAJ = OSUNUMRAP    OF DOS_OLD
          LET DOSSTU       OF DOS_MAJ = "M"
          LET TPDTYPPRD    OF DOS_MAJ = TPDTYPPRD    OF DOS_OLD
          LET TRANUMTRA002 OF DOS_MAJ = TRANUMTRA002 OF DOS_OLD
          LET DOSLON       OF DOS_MAJ = DOSLON       OF DOS_OLD
          LET DOSHAU       OF DOS_MAJ = DOSHAU       OF DOS_OLD
          LET DOSEPA       OF DOS_MAJ = DOSEPA       OF DOS_OLD
          LET TGRCODGRA    OF DOS_MAJ = TGRCODGRA    OF DOS_OLD
          LET DOSCODFIN001 OF DOS_MAJ = DOSCODFIN001 OF DOS_OLD
          LET DOSCODFIN002 OF DOS_MAJ = DOSCODFIN002 OF DOS_OLD
          LET DOSEPARES    OF DOS_MAJ = DOSEPARES    OF DOS_OLD
          LET DOSPRD       OF DOS_MAJ = DOSPRD       OF DOS_OLD
          LET DOSHREDIS    OF DOS_MAJ = DOSHREDIS    OF DOS_OLD
          LET DOSACCERR    OF DOS_MAJ = DOSACCERR    OF DOS_OLD
          PUT DOS_MAJ
        END
      END
      ELSE BEGIN
        ERROR "PROBLÈME TECHNIQUE"
      END

      IF OSUSTU OF PDOPERATION_SURF = "V" OR &
         OSUSTU OF PDOPERATION_SURF = "T"
      THEN BEGIN
        LET OSUSTU OF PDOPERATION_SURF = "E"
      END
    END

  END




