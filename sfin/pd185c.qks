;/V/ Écran vérifier pour le passage à l'an 2000


SCREEN pd185c ACTIONBAR                     &
              MODE LABEL "" AT 2,80         &
              NOACTION                      &
              FIELDMARK RETAIN STARTUP      &
              HELP POPUP FROM 4,9 TO 20,72  &
              RECEIVING T_CIECLEMNU,        &
                        T_CIENOM,           &
                        PDOPERATION_SURF


;-------------------------------------------------------------------------------
;
; Débute une transaction pour le sous-écran
;
USE ustrasse  NOLIST


;-------------------------------------------------------------------------------
; Variables pour la sécurité.
;
USE ussectmp  NOLIST
    "PD185C"


;-------------------------------------------------------------------------------
; Documentation de l'écran.
;
USE pd185c.hlp NOLIST


;-------------------------------------------------------------------------------
;
; Actionbar standard
;
USE usactecr  NOLIST


;-------------------------------------------------------------------------------
;
; Variables saisie ou affichée dans le menu. (et utilisés dans le passage de
; paramètres).
;
TEMPORARY T_CIECLEMNU CHARACTER SIZE 4  RESET AT STARTUP ; Compagnie menu
TEMPORARY T_CIENOM    CHARACTER SIZE 40 RESET AT STARTUP ; nom compagnie


;-------------------------------------------------------------------------------
;
; Numéro et nom de la compagnie pour l'en-tête de l'écran.
;
DEFINE DZ_CIECLE CHARACTER SIZE 4 = T_CIECLEMNU
DEFINE DZ_CIENOM CHARACTER SIZE 40 = CENTER( T_CIENOM )


;-------------------------------------------------------------------------------
;
; Sert à valider les codes bilingue et pour les sous-écrans de consultation
;
DEFINE    D_QRTCODQRT CHARACTER SIZE 16 = "QRTCODQRT"
TEMPORARY T_QRTCODQRT CHARACTER SIZE 04
DEFINE    D_OSUSTU    CHARACTER SIZE 16 = "OSUSTU"
TEMPORARY T_OSUSTU    CHARACTER SIZE 04


;-------------------------------------------------------------------------------
;
; Clés de recherche pour les popup de consultations et les sous écrans
;

TEMPORARY T_TRANUMTRA002     CHARACTER SIZE 7
TEMPORARY T_COD              INTEGER UNSIGNED SIZE 02


;-------------------------------------------------------------------------------
;
; Variables nécessaire au traitement
;

TEMPORARY T_SILENT           CHARACTER SIZE 1


;-------------------------------------------------------------------------------
;
; Dimension maximum et minimum des pièces de granit
;

USE usdimprd NOLIST


;-------------------------------------------------------------------------------
;
; Variable pour le calcul du volume d'une pièce de granit
;
use usvarvol NOLIST


;-------------------------------------------------------------------------------
;
; Opération de surface
;

FILE PDOPERATION_SURF  MASTER


;-------------------------------------------------------------------------------
;
; Détail opération surface
;

FILE PDDET_OPER_SURF PRIMARY &
                     NOITEM  &
                     OCCURS 7

  ACCESS VIA     CIECLE,          &
                 OSUNUMRAP,       &
                 TPDTYPPRD        &
         USING   T_CIECLEMNU,                          &
                 OSUNUMRAP        OF PDOPERATION_SURF, &
                 "TR"                                  &
         ORDERBY CIECLE,          &
                 OSUNUMRAP,       &
                 TRANUMTRA002



  ITEM CIECLE           OF PDDET_OPER_SURF INITIAL T_CIECLEMNU
  ITEM OSUNUMRAP        OF PDDET_OPER_SURF INITIAL OSUNUMRAP        OF PDOPERATION_SURF  FIXED
  ITEM TPDTYPPRD        OF PDDET_OPER_SURF INITIAL "TR"
  ITEM DOSSTU           OF PDDET_OPER_SURF INITIAL "E" ; En cours


;-------------------------------------------------------------------------------
;
; Tranche
;

FILE PDTRANCHE REFERENCE &
               ALIAS  TRA_AVANT &
               OCCURS WITH FILE PDDET_OPER_SURF

  ACCESS VIA   CIECLE,          &
               TRANUMTRA002     &
         USING T_CIECLEMNU,     &
               TRANUMTRA002     OF PDDET_OPER_SURF


  ITEM TRANUMTRA002     OF PDDET_OPER_SURF INITIAL TRANUMTRA002     OF TRA_AVANT
  ITEM DOSLON           OF PDDET_OPER_SURF INITIAL TRALON           OF TRA_AVANT
  ITEM DOSHAU           OF PDDET_OPER_SURF INITIAL TRAHAU           OF TRA_AVANT
  ITEM DOSEPA           OF PDDET_OPER_SURF INITIAL TRAEPA           OF TRA_AVANT
  ITEM TGRCODGRA        OF PDDET_OPER_SURF INITIAL TGRCODGRA        OF TRA_AVANT
  ITEM DOSCODFIN001     OF PDDET_OPER_SURF INITIAL TYFCODFIN        OF TRA_AVANT


;-------------------------------------------------------------------------------
;
; Tranche (avec le nouveau fini)
;

;;;;FILE PDTRANCHE DESIGNER  ALIAS  TRA_APRES
;;;;
;;;;  ACCESS VIA   CIECLE,          &
;;;;               TRANUMTRA002     &
;;;;         USING T_CIECLEMNU,     &
;;;;               TRANUMTRA002     OF PDDET_OPER_SURF


;-------------------------------------------------------------------------------
;
;
;

FILE PDDET_OPER_SURF DESIGNER ALIAS DOS_OLD


;-------------------------------------------------------------------------------
;
;
;

FILE PDDET_OPER_SURF DESIGNER ALIAS DOS_MAJ


;-------------------------------------------------------------------------------
;
; Machine opération de surface
;

FILE PDMACH_OP_SURF  REFERENCE

  ACCESS VIA     CIECLE,          &
                 MOPCODMAC        &
         USING   T_CIECLEMNU,     &
                 MOPCODMAC        OF PDOPERATION_SURF


;-------------------------------------------------------------------------------
;
; Code bilingue (Statut)
;

FILE VCBI_DSC  REFERENCE &
               ALIAS A_CBI_OSUSTU

  ACCESS VIA   XELNOM,                               &
               CBICLE                                &
         USING D_OSUSTU,                             &
               OSUSTU           OF PDOPERATION_SURF


;-------------------------------------------------------------------------------
;
; Code bilingue (quart de travail)
;

FILE VCBI_DSC  REFERENCE &
               ALIAS A_CBI_QRTCODQRT

  ACCESS VIA   XELNOM,                               &
               CBICLE                                &
         USING D_QRTCODQRT,                          &
               QRTCODQRT        OF PDOPERATION_SURF


