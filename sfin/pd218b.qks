FIELD RSCMC3PRD        OF PDRAP_SCIAGE     &
label "M3............:"&
        DISPLAY                            &
        FIXED


FIELD RSCHREPRD        OF PDRAP_SCIAGE     &
label "Hre...........:"&
        DISPLAY                            &
        FIXED


FIELD RSCPRD           OF PDRAP_SCIAGE     &
label "Productivité..:"&
        DISPLAY                            &
        FIXED


DRAW 08,2 TO 08,79


SKIP TO LINE 8


TITLE &
@IF FRANCAIS
      " Arrêt sciage " &
@ELSE
      " %%%Arrêt sciage " &
@ENDIF
      CENTERED AT ,1


SKIP TO LINE 10


TITLE &
@IF FRANCAIS
      "      Montage  Scie  Début     Fin   Raison   Description  " &
@ELSE
      "%%%   Montage  Scie  Début     Fin   Raison   Description  " &
@ENDIF
      AT ,2


SKIP TO LINE 11


ALIGN (04,05,06) (,,18) (,,23) (,,31) (,,39) (,,48)


CLUSTER OCCURS WITH PDARRET_SCIAGE for 1,78 at 11,2


FIELD RMSNUMSEQ        OF PDARRET_SCIAGE   &
        HIDDEN                             &
        ID NEXT                            &
        LABEL " "                          &
        DISPLAY


FIELD SCINUMSCI        OF PDRAP_MONTAGE    &
        ID SAME                            &
        DISPLAY


FIELD ARSHREDEB        OF PDARRET_SCIAGE   &
        REQUIRED


FIELD ARSHREFIN        OF PDARRET_SCIAGE   &
        REQUIRED


FIELD RAACODARR        OF PDARRET_SCIAGE   &
        LOOKUP ON PDRAISON_ARRET           &
          MESSAGE 2976 ; Cette raison n'existe pas


FIELD T_SILENT                             &
        SILENT


FIELD ARSDSCARR        OF PDARRET_SCIAGE   &
        FOR ,25


CLUSTER


;-------------------------------------------------------------------------------
;
; Valide la sécurité d'accès de l'écran.
;

PROCEDURE INITIALIZE
BEGIN
  USE ussececr NOLIST
END


;-------------------------------------------------------------------------------
;
; Valide que l'heure de début n'est pas dans un intervalle déjà enregistré
;

PROCEDURE EDIT ARSHREDEB OF PDARRET_SCIAGE
BEGIN
  ;
  ; Garde en memoire l'ancienne valeur
  ;
  LET T_OLDHREDEB = OLDVALUE(ARSHREDEB OF PDARRET_SCIAGE)
  ;
  ; Valide que l'heure de début est compris dans l'intervalle du rapport
  ;
  IF ARSHREDEB OF PDARRET_SCIAGE < RSCHREDEB OF PDRAP_SCIAGE &
     OR &
     ARSHREDEB OF PDARRET_SCIAGE > RSCHREFIN OF PDRAP_SCIAGE
  THEN BEGIN
    ERROR 3010 ; L'heure de début n'est pas compris dans l'intervalle du rapport
  END
  ;
  ; Fait le test seulement si l'heure de fin a déjà été saisie
  ;
  IF ARSHREDEB OF PDARRET_SCIAGE <> 0
  THEN BEGIN
    ;
    ; Valide que la plage horraire n'a pas été déjà enregistré
    ;
    GET ARS_FIC OPTIONAL
    IF ACCESSOK
    THEN BEGIN
      ERROR 3005 ; Cette plage horraire chevauche une plage déjà enregistrer
    END
  END
END


;-------------------------------------------------------------------------------
;
; Valide que l'heure de début est plus petite que l'heure de fin
;

PROCEDURE EDIT ARSHREFIN OF PDARRET_SCIAGE
BEGIN
  ;
  ; Garde en memoire l'ancienne valeur
  ;
  LET T_OLDHREFIN = OLDVALUE(ARSHREFIN OF PDARRET_SCIAGE)
  ;
  ; Valide que l'heure de début est compris dans l'intervalle du rapport
  ;
  IF ARSHREFIN OF PDARRET_SCIAGE < RSCHREDEB OF PDRAP_SCIAGE &
     OR &
     ARSHREFIN OF PDARRET_SCIAGE > RSCHREFIN OF PDRAP_SCIAGE
  THEN BEGIN
    ERROR 3011 ; L'heure de fin n'est pas compris dans l'intervalle du rapport
  END
  ;
  ; Valide que l<heure de fin est plus grande que l'heure de d/but
  ;
  IF ARSHREFIN OF PDARRET_SCIAGE < ARSHREDEB OF PDARRET_SCIAGE
  THEN BEGIN
    ERROR 3007 ; L'heure de début doit être plus petite que l'heure de fin
  END
  ;
  ; Valide que la plage horraire n'a pas été déjà enregistré
  ;
  GET ARS_FIC OPTIONAL
  IF ACCESSOK
  THEN BEGIN
    ERROR 3005 ; Cette plage horraire chevauche une plage déjà enregistrer
  END
END


;-------------------------------------------------------------------------------
;
; Calcul la durée en seconde
;

PROCEDURE EDIT T_SILENT
BEGIN
  ;
  ; Calcul de la durée de l'ancienne valeur
  ;
  LET TZ_DATDEB   = RSCDATPRD        OF PDRAP_SCIAGE
  LET TZ_TMPDEB   = ASCII(T_OLDHREDEB,4) + "00"
  LET TZ_DATFIN   = RSCDATPRD        OF PDRAP_SCIAGE
  LET TZ_TMPFIN   = ASCII(T_OLDHREFIN,4) + "00"
  LET T_OLDDURSEC = DZ_DIFSECTOT
  ;
  ; Calcul de la durée de la nouvelle valeur
  ;
  LET TZ_DATDEB   = RSCDATPRD        OF PDRAP_SCIAGE
  LET TZ_TMPDEB   = ASCII(ARSHREDEB  OF PDARRET_SCIAGE,4) + "00"
  LET TZ_DATFIN   = RSCDATPRD        OF PDRAP_SCIAGE
  LET TZ_TMPFIN   = ASCII(ARSHREFIN  OF PDARRET_SCIAGE,4) + "00"
  LET T_NEWDURSEC = DZ_DIFSECTOT

  LET ARSDURSEC OF PDARRET_SCIAGE = T_NEWDURSEC

  LET RSCDUR OF PDRAP_SCIAGE = RSCDUROPE OF PDRAP_SCIAGE - RSCDURARR OF PDRAP_SCIAGE
  ;
  ; Calcul des heures de production
  ;
  LET TZ_NBRSEC   = RSCDUR OF PDRAP_SCIAGE
  LET RSCHREPRD OF PDRAP_SCIAGE = DZ_HEURE
  DISPLAY RSCHREPRD OF PDRAP_SCIAGE
  ;
  ; Calcul de la prodictivité
  ;
  LET RSCPRD OF PDRAP_SCIAGE = (RSCMC3PRD OF PDRAP_SCIAGE / RSCHREPRD OF PDRAP_SCIAGE) / 100
  DISPLAY RSCPRD OF PDRAP_SCIAGE
END


;-------------------------------------------------------------------------------
;
; Appel du popup pour le champs raison d'arret
;

PROCEDURE INPUT RAACODARR
BEGIN
  IF 0 <> INDEX(FIELDTEXT,"*")
  THEN BEGIN
    LET T_RAACODARR = FIELDTEXT[1:INDEX(FIELDTEXT,"*") - 1] + "@"
    RUN SCREEN pd114 MODE F &
                     PASSING T_RAACODARR, &
                             T_CIECLEMNU
    LET FIELDTEXT = TRUNCATE( T_RAACODARR )
  END
END


;-------------------------------------------------------------------------------
;
; Assigne une valeur par défaut
;

PROCEDURE INPUT ARSDSCARR OF PDARRET_SCIAGE
BEGIN
  IF 0 = SIZE(FIELDTEXT) AND ENTRYMODE
  THEN BEGIN
    LET FIELDTEXT = RAADSCFRA        OF PDRAISON_ARRET
  END
END


;-------------------------------------------------------------------------------
;
; Valide si l'usager peut faire de la saisie.
;

PROCEDURE PREENTRY
BEGIN
  USE ussecent NOLIST
END


;-------------------------------------------------------------------------------
;
; Valide les traitements permis par écran et par usager.
;

PROCEDURE PREUPDATE
BEGIN
  FOR PDARRET_SCIAGE
  BEGIN
    ;
    ; Validation de la destruction
    ;
    IF     DELETEDRECORD OF PDARRET_SCIAGE &
       AND TZ_SECDEL = "0"
    THEN ERROR 1
    ;
    ; Validation de la modification.
    ;
    IF     ALTEREDRECORD     OF PDARRET_SCIAGE &
       AND NOT NEWRECORD     OF PDARRET_SCIAGE &
       AND NOT DELETEDRECORD OF PDARRET_SCIAGE &
       AND TZ_SECMOD = "0"
    THEN ERROR 2
  END
END


;-------------------------------------------------------------------------------
;
; Mise à jour del la durée de sciage lors de la destruction d'un enregistrement
;

PROCEDURE DELETE
BEGIN
  DELETE PDARRET_SCIAGE
  ;
  ; Calcul de la durée réel
  ;
  LET RSCDUR OF PDRAP_SCIAGE = RSCDUROPE OF PDRAP_SCIAGE - RSCDURARR OF PDRAP_SCIAGE
  ;
  ; Calcul des heures de production
  ;
  LET TZ_NBRSEC   = RSCDUR OF PDRAP_SCIAGE
  LET RSCHREPRD OF PDRAP_SCIAGE = DZ_HEURE
  DISPLAY RSCHREPRD OF PDRAP_SCIAGE
  ;
  ; Calcul de la prodictivité
  ;
  LET RSCPRD OF PDRAP_SCIAGE = (RSCMC3PRD OF PDRAP_SCIAGE / RSCHREPRD OF PDRAP_SCIAGE) / 100
  DISPLAY RSCPRD OF PDRAP_SCIAGE
END


