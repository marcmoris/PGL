;/V/ Écran vérifier pour le passage à l'an 2000


SCREEN pd218b ACTIONBAR                     &
              MODE LABEL "" AT 2,80         &
              NOACTION                      &
              FIELDMARK RETAIN STARTUP      &
              HELP POPUP FROM 4,9 TO 20,72  &
              RECEIVING T_CIECLEMNU,        &
                        T_CIENOM,           &
                        PDRAP_SCIAGE,       &
                        PDDET_RAP_SCIAGE


;-------------------------------------------------------------------------------
;
; Débute une transaction pour le sous-écran
;
USE ustrasse  NOLIST


;-------------------------------------------------------------------------------
; Variables pour la sécurité.
;
USE ussectmp  NOLIST
    "PD218B"


;-------------------------------------------------------------------------------
; Documentation de l'écran.
;
USE pd218b.hlp NOLIST


;-------------------------------------------------------------------------------
;
; Actionbar standard
;
USE usactecr  NOLIST


;-------------------------------------------------------------------------------
;
; Variables saisie ou affichée dans le menu. (et utilisés dans le passage de
; paramètres).
;
TEMPORARY T_CIECLEMNU CHARACTER SIZE 4  RESET AT STARTUP ; Compagnie menu
TEMPORARY T_CIENOM    CHARACTER SIZE 40 RESET AT STARTUP ; nom compagnie


;-------------------------------------------------------------------------------
;
; Numéro et nom de la compagnie pour l'en-tête de l'écran.
;
DEFINE DZ_CIECLE CHARACTER SIZE 4 = T_CIECLEMNU
DEFINE DZ_CIENOM CHARACTER SIZE 40 = CENTER( T_CIENOM )


;-------------------------------------------------------------------------------
;
; Sert à valider les codes bilingue et pour les sous-écrans de consultation
;

DEFINE    D_QRTCODQRT CHARACTER SIZE 16 = "QRTCODQRT"
TEMPORARY T_QRTCODQRT CHARACTER SIZE 04


;-------------------------------------------------------------------------------
;
; Clés de recherche pour les popup de consultations et les sous écrans
;

TEMPORARY T_RAACODARR   CHARACTER SIZE 04


;-------------------------------------------------------------------------------
;
; Variables nécessaire au traitement
;

TEMPORARY T_SILENT     CHARACTER SIZE 01
TEMPORARY T_OLDHREDEB  INTEGER   SIZE 04
TEMPORARY T_OLDHREFIN  INTEGER   SIZE 04
TEMPORARY T_OLDDURSEC  FLOAT     SIZE 08
TEMPORARY T_NEWDURSEC  FLOAT     SIZE 08


;-------------------------------------------------------------------------------
;
; Variable nécessaire pour le calcul d'un intervalle de temps
;

USE usdiftim NOLIST


;-------------------------------------------------------------------------------
;
; Variable nécessaire pour le calcul de l'heure à partir d'un nombre de seconde
;

USE uscaltim NOLIST


;-------------------------------------------------------------------------------
;
; Rapport de sciage
;

FILE PDRAP_SCIAGE MASTER


;-------------------------------------------------------------------------------
;
; Détail arrêt sciage
;

FILE PDDET_RAP_SCIAGE MASTER


;-------------------------------------------------------------------------------
;
; Opérateur sciage
;

FILE PDARRET_SCIAGE   PRIMARY &
                      NOITEM &
                      OCCURS 11 TIMES

  ACCESS VIA     CIECLE,          &
                 RSCDATPRD,       &
                 QRTCODQRT        &
         USING   T_CIECLEMNU,                         &
                 RSCDATPRD        OF PDRAP_SCIAGE,    &
                 QRTCODQRT        OF PDRAP_SCIAGE     &
         ORDERBY CIECLE,          &
                 RSCDATPRD,       &
                 QRTCODQRT,       &
                 ARSHREDEB,       &
                 ARSHREFIN

  ITEM CIECLE    OF PDARRET_SCIAGE INITIAL T_CIECLEMNU
  ITEM RSCDATPRD OF PDARRET_SCIAGE INITIAL RSCDATPRD OF PDRAP_SCIAGE FIXED
  ITEM QRTCODQRT OF PDARRET_SCIAGE INITIAL QRTCODQRT OF PDRAP_SCIAGE FIXED
  ITEM RMSNUMSEQ OF PDARRET_SCIAGE INITIAL RMSNUMSEQ OF PDDET_RAP_SCIAGE FIXED

  ITEM ARSDURSEC OF PDARRET_SCIAGE SUM INTO RSCDURARR OF PDRAP_SCIAGE


;-------------------------------------------------------------------------------
;
; Arrêt sciage validation des plages horraire pour le rapport
;

FILE PDARRET_SCIAGE DESIGNER ALIAS ARS_FIC

  ACCESS VIA     CIECLE,          &
                 RSCDATPRD,       &
                 QRTCODQRT,       &
                 RMSNUMSEQ        &
         USING   T_CIECLEMNU,                          &
                 RSCDATPRD        OF PDARRET_SCIAGE,   &
                 QRTCODQRT        OF PDARRET_SCIAGE,   &
                 RMSNUMSEQ        OF PDARRET_SCIAGE

  ;
  ; Sélectionne si une des deux bornes du nouvel enregistrement se retrouve
  ; parmis l'intervale déjà enregistré.
  ;

  SELECT IF (ARSHREDEB OF PDARRET_SCIAGE >= ARSHREDEB OF ARS_FIC  &
             AND                                                  &
             ARSHREDEB OF PDARRET_SCIAGE <= ARSHREFIN OF ARS_FIC) &
            OR                                                    &
            (ARSHREDEB OF PDARRET_SCIAGE >= ARSHREDEB OF ARS_FIC  &
             AND                                                  &
             ARSHREDEB OF PDARRET_SCIAGE <= ARSHREDEB OF ARS_FIC) &
            OR                                                    &
            (ARSHREDEB OF PDARRET_SCIAGE <= ARSHREDEB OF ARS_FIC  &
             AND                                                  &
             ARSHREDEB OF PDARRET_SCIAGE >= ARSHREDEB OF ARS_FIC)


;-------------------------------------------------------------------------------
;
; Opérateur
;

FILE PDRAP_MONTAGE REFERENCE OCCURS WITH PDARRET_SCIAGE

  ACCESS VIA     CIECLE,          &
                 RMSNUMSEQ        &
         USING   T_CIECLEMNU,     &
                 RMSNUMSEQ        OF PDARRET_SCIAGE


;-------------------------------------------------------------------------------
;
; Raison arret
;

FILE PDRAISON_ARRET REFERENCE OCCURS WITH PDARRET_SCIAGE

  ACCESS VIA   CIECLE,          &
               RAACODARR        &
         USING T_CIECLEMNU,     &
               RAACODARR        OF PDARRET_SCIAGE


;-------------------------------------------------------------------------------
;
; Code bilingue (quart de travail)
;

FILE VCBI_DSC  REFERENCE &
               ALIAS A_CBI_QRTCODQRT

  ACCESS VIA   XELNOM,                               &
               CBICLE                                &
         USING D_QRTCODQRT,                          &
               QRTCODQRT        OF PDRAP_SCIAGE


;-------------------------------------------------------------------------------
;
;

USE usdrwecr NOLIST ; Draw pour les écrans pleine page
USE ustitstd NOLIST ; En-tête pour les écrans pleine page
USE ushilite NOLIST ; Hilite pour tout les écrans


