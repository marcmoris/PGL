LABEL "Hre fin.......:"&
        FIXED


ALIGN (,3,19) (,,24)


FIELD MOPCODMAC        OF PDOPERATION_SURF &
LABEL "Code machine..:"&
        FIXED


FIELD MOPDSC001        OF PDMACH_OP_SURF   &
        FIXED


FIELD QRTCODQRT        OF PDOPERATION_SURF &
LABEL "Quart.........:"&
        FIXED


FIELD CBIDSC           OF A_CBI_QRTCODQRT  &
        DISPLAY                            &
        FIXED


FIELD OSUSTU           OF PDOPERATION_SURF &
LABEL "Statut.......:"&
        FIXED


FIELD CBIDSC           OF A_CBI_OSUSTU     &
        DISPLAY                            &
        FIXED


DRAW 11,2 TO 11,79


SKIP TO LINE 11


TITLE &
@IF FRANCAIS
      " Arrêts opération surface " &
@ELSE
      " %%%Arrêts opération surface " &
@ENDIF
      CENTERED AT ,1


SKIP TO LINE 13


TITLE &
@IF FRANCAIS
  "        Arret    Départ   Code Description " &
@ELSE
  "%%%     Arret    Départ   Code Description " &
@ENDIF
  AT ,2


SKIP TO LINE 14


ALIGN (9,9,10) (,18,18) (,27,28) (,32,33) (,,38)


CLUSTER OCCURS WITH PDARRET_OP_SURF ID BASE 35


FIELD AOSHREDEB        OF PDARRET_OP_SURF  &
        HIDDEN                             &
        LABEL " "                          &
        REQUIRED


FIELD AOSHREFIN        OF PDARRET_OP_SURF  &
        HIDDEN                             &
        NOLABEL                            &
        REQUIRED


FIELD T_SILENT                             &
        SILENT                             &
        LOOKUP NOTON PDARRET_OP_SURF       &
          VIA     CIECLE ,                 &
                  OSUNUMRAP,               &
                  AOSHREDEB,               &
                  AOSHREFIN                &
          USING   T_CIECLEMNU,                         &
                  OSUNUMRAP        OF PDARRET_OP_SURF, &
                  AOSHREDEB        OF PDARRET_OP_SURF, &
                  AOSHREFIN        OF PDARRET_OP_SURF  &
          MESSAGE 2921 ; Ce numéro de ligne existe déjà


FIELD RAACODARR        OF PDARRET_OP_SURF  &
        NOLABEL                            &
        REQUIRED                           &
        LOOKUP ON PDRAISON_ARRET           &
          MESSAGE 2976 ; Cette raison n'existe pas


FIELD AOSDSCARR        OF PDARRET_OP_SURF  &
        HIDDEN                             &
        NOLABEL


CLUSTER


;-------------------------------------------------------------------------------
;
; Valide la sécurité d'accès de l'écran.
;

PROCEDURE INITIALIZE
BEGIN
  USE ussececr NOLIST
END


;-------------------------------------------------------------------------------
;
; Appel du popup pour le champs raison d'arret
;

PROCEDURE INPUT RAACODARR
BEGIN
  IF 0 <> INDEX(FIELDTEXT,"*")
  THEN BEGIN
    LET T_RAACODARR = FIELDTEXT[1:INDEX(FIELDTEXT,"*") - 1] + "@"
    RUN SCREEN pd114 MODE F &
                     PASSING T_RAACODARR, &
                             T_CIECLEMNU
    LET FIELDTEXT = TRUNCATE( T_RAACODARR )
  END
END


;-------------------------------------------------------------------------------
;
; Valide les plages horraire des arrets
;

PROCEDURE EDIT AOSHREDEB
BEGIN
  ;
  ; Valide que le temps d'arret est compris dans l'intervale du rapport
  ;
  IF AOSHREDEB OF PDARRET_OP_SURF < OSUDEP OF PDOPERATION_SURF &
     OR                                                        &
     AOSHREDEB OF PDARRET_OP_SURF > OSUARR OF PDOPERATION_SURF
  THEN BEGIN
    ERROR 3010 ; L'heure de début n'est pas compris dans l'intervale du rapport
  END
  ;
  ; Fait le test seulement si l'heure de fin a déjà été saisie
  ;
  IF AOSHREFIN OF PDARRET_OP_SURF <> 0
  THEN BEGIN
    ;
    ; Calcul de la durée de l'arret
    ;
    LET TZ_DATDEB   = OSUDATPRD        OF PDOPERATION_SURF
    LET TZ_TMPDEB   = ASCII(AOSHREDEB  OF PDARRET_OP_SURF,4) + "00"
    LET TZ_DATFIN   = OSUDATPRD        OF PDOPERATION_SURF
    LET TZ_TMPFIN   = ASCII(AOSHREFIN  OF PDARRET_OP_SURF,4) + "00"

    LET AOSDURSEC OF PDARRET_OP_SURF = DZ_DIFSECTOT
    ;
    ; Valide que l'intervalle n'est pas copris dans un déjà enregistrer
    ;
    GET AOS_ARRET_OP_SURFACE OPTIONAL
    IF ACCESSOK
    THEN BEGIN
      ERROR 3005 ; Cette plage horraire chevauche une plage déjà enregistrer
    END
  END
END


;-------------------------------------------------------------------------------
;
; Valide les plages horraire des arrets
;

PROCEDURE EDIT AOSHREFIN
BEGIN
  ;
  ; Valide que le temps d'arret est compris dans l'intervale du rapport
  ;
  IF AOSHREFIN OF PDARRET_OP_SURF < OSUDEP OF PDOPERATION_SURF &
     OR                                                        &
     AOSHREFIN OF PDARRET_OP_SURF > OSUARR OF PDOPERATION_SURF
  THEN BEGIN
    ERROR 3011 ; L'heure de fin n'est pas compris dans l'intervale du rapport
  END
  ;
  ; Valide que l'intervalle n'est pas copris dans un déjà enregistrer
  ;
  GET AOS_ARRET_OP_SURFACE OPTIONAL
  IF ACCESSOK
  THEN BEGIN
    ERROR 3005 ; Cette plage horraire chevauche une plage déjà enregistrer
  END
END


;-------------------------------------------------------------------------------
;
; Assigne une valeur par défaut
;

PROCEDURE INPUT AOSDSCARR
BEGIN
  IF 0 = SIZE(FIELDTEXT) AND ENTRYMODE
  THEN BEGIN
    LET FIELDTEXT = RAADSCFRA        OF PDRAISON_ARRET
  END
END


;-------------------------------------------------------------------------------
;
; Valide si l'usager peut faire de la saisie.
;

PROCEDURE PREENTRY
BEGIN
  USE ussecent NOLIST
END


;-------------------------------------------------------------------------------
;
; Valide les traitements permis par écran et par usager.
;

PROCEDURE PREUPDATE
BEGIN
  ;
  ;
  ;
  FOR PDARRET_OP_SURF
  BEGIN
    ;
    ; Validation de la destruction
    ;
    IF     DELETEDRECORD OF PDARRET_OP_SURF &
       AND TZ_SECDEL = "0"
    THEN ERROR 1
    ;
    ; Validation de la modification.
    ;
    IF     ALTEREDRECORD     OF PDARRET_OP_SURF &
       AND NOT NEWRECORD     OF PDARRET_OP_SURF &
       AND NOT DELETEDRECORD OF PDARRET_OP_SURF &
       AND TZ_SECMOD = "0"
    THEN ERROR 2
    ;
    ; Calcul de la durée de l'arret
    ;
    LET TZ_DATDEB   = OSUDATPRD        OF PDOPERATION_SURF
    LET TZ_TMPDEB   = ASCII(AOSHREDEB  OF PDARRET_OP_SURF,4) + "00"
    LET TZ_DATFIN   = OSUDATPRD        OF PDOPERATION_SURF
    LET TZ_TMPFIN   = ASCII(AOSHREFIN  OF PDARRET_OP_SURF,4) + "00"

    LET AOSDURSEC OF PDARRET_OP_SURF = DZ_DIFSECTOT

    ;
    ; Validation du statut du rapport
    ;
    IF ALTEREDRECORD OF PDARRET_OP_SURF
    THEN BEGIN
      ;
      ; Si le rapport à déjà été valider il faut reprendre la validation
      ;
      IF OSUSTU OF PDOPERATION_SURF = "V"
      THEN BEGIN
        LET OSUSTU OF PDOPERATION_SURF = "E" ; En cours , il faut reprendre la validation
        DISPLAY OSUSTU OF PDOPERATION_SURF
        DISPLAY CBIDSC OF A_CBI_OSUSTU
      END
      ;
      ; Si le rapport à été transferré il devient en correction
      ;
      IF OSUSTU OF PDOPERATION_SURF = "T"
      THEN BEGIN
        LET OSUSTU OF PDOPERATION_SURF = "C"  ; Correction après transfert
        DISPLAY OSUSTU OF PDOPERATION_SURF
        DISPLAY CBIDSC OF A_CBI_OSUSTU
      END
    END

    IF NEWRECORD OF PDARRET_OP_SURF
    THEN BEGIN
      ;
      ; Si le rapport à déjà été valider il faut reprendre la validation
      ;
      IF OSUSTU OF PDOPERATION_SURF = "V"
      THEN BEGIN
        LET OSUSTU OF PDOPERATION_SURF = "E" ; En cours , il faut reprendre la validation
        DISPLAY OSUSTU OF PDOPERATION_SURF
        DISPLAY CBIDSC OF A_CBI_OSUSTU
      END
      ;
      ; Si le rapport à été transferré il devient en correction
      ;
      IF OSUSTU OF PDOPERATION_SURF = "T"
      THEN BEGIN
        LET OSUSTU OF PDOPERATION_SURF = "C"  ; Correction après transfert
        DISPLAY OSUSTU OF PDOPERATION_SURF
        DISPLAY CBIDSC OF A_CBI_OSUSTU
      END
    END
  END
  ;
  ; Incrémentation du numéro de séquence
  ;
  IF 0 = OSUNUMRAP        OF PDOPERATION_SURF
  THEN BEGIN
    START TRANSACTION NO_SEQ
    GET PDSEQ_OPER_SURF OPTIONAL        &
      VIA   CIECLE                      &
      USING T_CIECLEMNU
    IF NOT ACCESSOK
    THEN BEGIN
      LET CIECLE OF PDSEQ_OPER_SURF = T_CIECLEMNU
    END
    LET SEONUMRAP     OF PDSEQ_OPER_SURF  = SEONUMRAP OF PDSEQ_OPER_SURF + 1
    LET OSUNUMRAP     OF PDOPERATION_SURF = SEONUMRAP OF PDSEQ_OPER_SURF
    PUT PDSEQ_OPER_SURF
    DISPLAY OSUNUMRAP     OF PDOPERATION_SURF
  END
END


PROCEDURE INTERNAL VALIDE_HEURE
BEGIN
  ;
  ; Validation des plages horraire pour les arrêts
  ;
  WHILE RETRIEVING AOS_ARRET_OP_SURFACE
  BEGIN
    IF (AOSHREDEB OF PDARRET_OP_SURF <> AOSHREDEB OF AOS_ARRET_OP_SURFACE    &
        AND                                                                  &
        AOSHREFIN OF PDARRET_OP_SURF <> AOSHREFIN OF AOS_ARRET_OP_SURFACE)
    THEN BEGIN
      IF ( (AOSHREDEB OF PDARRET_OP_SURF >= AOSHREDEB OF AOS_ARRET_OP_SURFACE    &
            AND                                                                  &
            AOSHREDEB OF PDARRET_OP_SURF < AOSHREFIN OF AOS_ARRET_OP_SURFACE)   &
          OR                                                                     &
           (AOSHREFIN OF PDARRET_OP_SURF >= AOSHREDEB OF AOS_ARRET_OP_SURFACE    &
            AND                                                                  &
            AOSHREFIN OF PDARRET_OP_SURF <= AOSHREFIN OF AOS_ARRET_OP_SURFACE))  &
         OR                                                                      &
           (AOSHREDEB OF PDARRET_OP_SURF <= AOSHREDEB OF AOS_ARRET_OP_SURFACE    &
            AND                                                                  &
            AOSHREFIN OF PDARRET_OP_SURF >= AOSHREFIN OF AOS_ARRET_OP_SURFACE)
      THEN BEGIN
        ERROR 3005 ; Cette plage horraire chevauche une plage déjà enregistrer
       END
    END
  END
END


;-------------------------------------------------------------------------------
;
; update
;
PROCEDURE UPDATE
BEGIN
  PUT PDOPERATION_SURF
  FOR PDARRET_OP_SURF
  BEGIN
    PUT PDARRET_OP_SURF
    ;DO INTERNAL VALIDE_HEURE
  END
END


