;-------------------------------------------------------------------------------
;
; Valide la sécurité d'accès de l'écran.
;

PROCEDURE INITIALIZE
BEGIN
  USE ussececr NOLIST
END


;-------------------------------------------------------------------------------
;
; Appel du dépisteur pour le champs
;

PROCEDURE INPUT OPENUMEMP
BEGIN
  IF 0 <> INDEX(FIELDTEXT,"*")
  THEN BEGIN
    LET T_EMPLOYE_NUM   = FIELDTEXT[1:INDEX(FIELDTEXT,"*") - 1] + "@"
    RUN SCREEN pd110 MODE F &
                     PASSING T_EMPLOYE_NUM, &
                             T_CIECLEMNU
    LET FIELDTEXT = TRUNCATE( T_EMPLOYE_NUM  )
  END
END


;-------------------------------------------------------------------------------
;
; Valide que l'heure de début n'est pas dans un intervalle déjà enregistré
;

PROCEDURE EDIT OPSHREDEB OF PDOPERATEUR_SCIE
BEGIN
  ;
  ; Garde en memoire l'ancienne valeur
  ;
  LET T_OLDHREDEB = OLDVALUE(OPSHREDEB OF PDOPERATEUR_SCIE)
  ;
  ; Valide que l'heure de début est compris dans l'intervalle du rapport
  ;
  IF OPSHREDEB OF PDOPERATEUR_SCIE < RSCHREDEB OF PDRAP_SCIAGE &
     OR &
     OPSHREDEB OF PDOPERATEUR_SCIE > RSCHREFIN OF PDRAP_SCIAGE
  THEN BEGIN
    ERROR 3010 ; L'heure de début n'est pas compris dans l'intervalle du rapport
  END
END


;-------------------------------------------------------------------------------
;
; Valide que l'heure de début est plus petite que l'heure de fin
;

PROCEDURE EDIT OPSHREFIN OF PDOPERATEUR_SCIE
BEGIN
  ;
  ; Garde en memoire l'ancienne valeur
  ;
  LET T_OLDHREFIN = OLDVALUE(OPSHREFIN OF PDOPERATEUR_SCIE)
  ;
  ; Valide que l'heure de début est compris dans l'intervalle du rapport
  ;
  IF OPSHREFIN OF PDOPERATEUR_SCIE < RSCHREDEB OF PDRAP_SCIAGE &
     OR &
     OPSHREFIN OF PDOPERATEUR_SCIE > RSCHREFIN OF PDRAP_SCIAGE
  THEN BEGIN
    ERROR 3011 ; L'heure de fin n'est pas compris dans l'intervalle du rapport
  END
  ;
  ; Valide que l'heure de fin est plus grande que l'heure de début
  ;
  IF OPSHREFIN OF PDOPERATEUR_SCIE <= OPSHREDEB OF PDOPERATEUR_SCIE
  THEN BEGIN
    ERROR 3007 ; L'heure de début doit être plus petite que l'heure de fin
  END
END


;-------------------------------------------------------------------------------
;
; Appel du popup pour le champs raison d'arret
;

PROCEDURE INPUT RAACODARR
BEGIN
  IF 0 <> INDEX(FIELDTEXT,"*")
  THEN BEGIN
    LET T_RAACODARR = FIELDTEXT[1:INDEX(FIELDTEXT,"*") - 1] + "@"
    RUN SCREEN pd114 MODE F &
                     PASSING T_RAACODARR, &
                             T_CIECLEMNU
    LET FIELDTEXT = TRUNCATE( T_RAACODARR )
  END
END


;-------------------------------------------------------------------------------
;
; Calcul la durée en seconde
;

PROCEDURE EDIT T_SILENT
BEGIN
  ;
  ; Valide que la plage horraire n'a pas été déjà enregistré
  ;
  LET T-COMPTEUR = OCCURRENCE
  LET T-CODEMP   = OPENUMEMP OF PDOPERATEUR_SCIE
  LET T-HREDEB   = OPSHREDEB OF PDOPERATEUR_SCIE
  LET T-HREFIN   = OPSHREFIN OF PDOPERATEUR_SCIE
  LET T-CODARR   = RAACODARR OF PDOPERATEUR_SCIE
  IF 0 = SIZE(TRUNC(T-CODARR))
  THEN BEGIN
  FOR PDOPERATEUR_SCIE
  BEGIN
    IF T-COMPTEUR <> OCCURRENCE
    THEN BEGIN
          IF ((OPSHREDEB OF PDOPERATEUR_SCIE >= T-HREDEB &
             AND                                       &
             OPSHREDEB OF PDOPERATEUR_SCIE < T-HREFIN) &
            OR                                         &
            (OPSHREDEB OF PDOPERATEUR_SCIE < T-HREDEB  &
             AND                                       &
             OPSHREFIN OF PDOPERATEUR_SCIE > T-HREDEB) &
            OR                                         &
            (OPSHREDEB OF PDOPERATEUR_SCIE < T-HREFIN  &
             AND                                       &
             OPSHREFIN OF PDOPERATEUR_SCIE > T-HREFIN))&
             AND T-CODEMP = OPENUMEMP OF PDOPERATEUR_SCIE
        THEN ERROR 3005 ; Cette plage horaire chevauche ...
    END
  END
  END
  IF 0 <> SIZE(TRUNC(T-CODARR))
  THEN BEGIN
  FOR PDOPERATEUR_SCIE
  BEGIN
    IF T-COMPTEUR <> OCCURRENCE AND &
       0 <> SIZE(TRUNC(RAACODARR OF PDOPERATEUR_SCIE))
    THEN BEGIN
          IF ((OPSHREDEB OF PDOPERATEUR_SCIE >= T-HREDEB &
             AND                                       &
             OPSHREDEB OF PDOPERATEUR_SCIE < T-HREFIN) &
            OR                                         &
            (OPSHREDEB OF PDOPERATEUR_SCIE < T-HREDEB  &
             AND                                       &
             OPSHREFIN OF PDOPERATEUR_SCIE > T-HREDEB) &
            OR                                         &
            (OPSHREDEB OF PDOPERATEUR_SCIE < T-HREFIN  &
             AND                                       &
             OPSHREFIN OF PDOPERATEUR_SCIE > T-HREFIN))&
             AND T-CODEMP = OPENUMEMP OF PDOPERATEUR_SCIE
        THEN ERROR 3005 ; Cette plage horaire chevauche ...
    END
  END
  END
  ;
  ; Calcul de la durée de l'ancienne valeur
  ;
  LET TZ_DATDEB   = RSCDATPRD        OF PDRAP_SCIAGE
  LET TZ_TMPDEB   = ASCII(T_OLDHREDEB,4) + "00"
  IF QRTCODQRT OF PDRAP_SCIAGE = "S" AND T_OLDHREFIN > 2400
  THEN BEGIN
    LET TZ_DATFIN   = RSCDATPRD        OF PDRAP_SCIAGE + 1
    LET TZ_TMPFIN   = ASCII((T_OLDHREFIN - 2400),4) + "00"
  END
  ELSE BEGIN
    LET TZ_DATFIN   = RSCDATPRD        OF PDRAP_SCIAGE
    LET TZ_TMPFIN   = ASCII(T_OLDHREFIN,4) + "00"
  END


  LET T_OLDDURSEC = DZ_DIFSECTOT
  ;
  ; Calcul de la durée de la nouvelle valeur
  ;
  LET TZ_DATDEB   = RSCDATPRD        OF PDRAP_SCIAGE
  LET TZ_TMPDEB   = ASCII(OPSHREDEB  OF PDOPERATEUR_SCIE,4) + "00"
  IF QRTCODQRT OF PDRAP_SCIAGE = "S" AND T_OLDHREFIN > 2400
  THEN BEGIN
    LET TZ_DATFIN   = RSCDATPRD        OF PDRAP_SCIAGE + 1
    LET TZ_TMPFIN   = ASCII((OPSHREFIN  OF PDOPERATEUR_SCIE - 2400),4) + "00"
  END
  ELSE BEGIN
    LET TZ_DATFIN   = RSCDATPRD        OF PDRAP_SCIAGE
    LET TZ_TMPFIN   = ASCII(OPSHREFIN  OF PDOPERATEUR_SCIE,4) + "00"
  END

  LET T_NEWDURSEC = DZ_DIFSECTOT

  LET OPSDURSEC OF PDOPERATEUR_SCIE = T_NEWDURSEC

  ;
  ; Calcul de la durée d'opération ou d'arrêt selon le cas
  ;
  IF 0 = SIZE(TRUNCATE(RAACODARR OF PDOPERATEUR_SCIE))
  THEN BEGIN
    LET OPSDURSECOPE OF PDOPERATEUR_SCIE = T_NEWDURSEC
    LET RSCDUR OF PDRAP_SCIAGE = RSCDUROPE OF PDRAP_SCIAGE - RSCDURARR OF PDRAP_SCIAGE
  END
  ELSE BEGIN
    LET OPSDURSECARR OF PDOPERATEUR_SCIE = T_NEWDURSEC
    LET RSCDUR OF PDRAP_SCIAGE = RSCDUROPE OF PDRAP_SCIAGE - RSCDURARR OF PDRAP_SCIAGE
  END
  ;
  ; Calcul des heures de production
  ;
  LET TZ_NBRSEC   = RSCDUR OF PDRAP_SCIAGE
  LET RSCHREPRD OF PDRAP_SCIAGE = DZ_HEURE_2
  DISPLAY RSCHREPRD OF PDRAP_SCIAGE
  ;
  ; Calcul de la prodictivité
  ;
  LET RSCPRD OF PDRAP_SCIAGE = (RSCMC3PRD OF PDRAP_SCIAGE / (RSCHREPRD OF PDRAP_SCIAGE / 100))
  DISPLAY RSCPRD OF PDRAP_SCIAGE
END


;-------------------------------------------------------------------------------
;
; Assigne une valeur par défaut
;

PROCEDURE INPUT OPSDSCARR        OF PDOPERATEUR_SCIE
BEGIN
  IF 0 = SIZE(FIELDTEXT) AND ENTRYMODE
  THEN BEGIN
    LET FIELDTEXT = RAADSCFRA        OF PDRAISON_ARRET
  END
END


;-------------------------------------------------------------------------------
;
; Valide si l'usager peut faire de la saisie.
;

PROCEDURE PREENTRY
BEGIN
  USE ussecent NOLIST
END


;-------------------------------------------------------------------------------
;
; Valide les traitements permis par écran et par usager.
;

PROCEDURE PREUPDATE
BEGIN
  FOR PDOPERATEUR_SCIE
  BEGIN
    ;
    ; Validation de la destruction
    ;
    IF     DELETEDRECORD OF PDOPERATEUR_SCIE &
       AND TZ_SECDEL = "0"
    THEN ERROR 1
    ;
    ; Validation de la modification.
    ;
    IF     ALTEREDRECORD     OF PDOPERATEUR_SCIE &
       AND NOT NEWRECORD     OF PDOPERATEUR_SCIE &
       AND NOT DELETEDRECORD OF PDOPERATEUR_SCIE &
       AND TZ_SECMOD = "0"
    THEN ERROR 2
  END
END


;-------------------------------------------------------------------------------
;
; PROCEDURE DE VALIDATION DES PLAGES HORAIRES
;

PROCEDURE INTERNAL VALIDE_PLAGE
BEGIN
  WHILE RETRIEVING A_OPS_FIC_2 &
    VIA   CIECLE,         &
          RSCDATPRD,      &
          QRTCODQRT,      &
          OPENUMEMP       &
    USING T_CIECLEMNU,    &
          RSCDATPRD       OF PDOPERATEUR_SCIE,      &
          QRTCODQRT       OF PDOPERATEUR_SCIE,      &
          OPENUMEMP       OF PDOPERATEUR_SCIE
  BEGIN
    IF     0 = SIZE(TRUNCATE(RAACODARR OF A_OPS_FIC_2 )) &
       AND OPSHREDEB OF A_OPS_FIC_2 <= OPSHREDEB OF PDOPERATEUR_SCIE &
       AND OPSHREFIN OF A_OPS_FIC_2 >= OPSHREFIN OF PDOPERATEUR_SCIE
   THEN BEGIN
      LET T_SW_TROUVE = "1"
    END
  END
END


;-------------------------------------------------------------------------------
;
; Valide les plages horaires
;

PROCEDURE UPDATE
BEGIN
  PUT PDRAP_SCIAGE
  FOR PDOPERATEUR_SCIE
  BEGIN
    PUT PDOPERATEUR_SCIE
  END

  FOR PDOPERATEUR_SCIE
  BEGIN
    IF NOT DELETEDRECORD
    THEN BEGIN
      IF    0 <> OPSDURSEC    OF PDOPERATEUR_SCIE &
         OR 0 <> OPSDURSECOPE OF PDOPERATEUR_SCIE &
         OR 0 <> OPSDURSECARR OF PDOPERATEUR_SCIE
      THEN BEGIN
        LET T_SW_TROUVE = "0"
        DO INTERNAL VALIDE_PLAGE
        IF T_SW_TROUVE = "0"
        THEN BEGIN
          ERROR 3235 ; Cette plage n'est pas comprise dans un intervalle de travail
        END
      END
    END
  END
END


;-------------------------------------------------------------------------------
;
; Mise à jour del la durée de sciage lors de la destruction d'un enregistrement
;

PROCEDURE DELETE
BEGIN
  DELETE PDOPERATEUR_SCIE
  ;
  ; Calcul de la durée réel
  ;
  LET RSCDUR OF PDRAP_SCIAGE = RSCDUROPE OF PDRAP_SCIAGE - RSCDURARR OF PDRAP_SCIAGE
  ;
  ; Calcul des heures de production
  ;
  LET TZ_NBRSEC   = RSCDUR OF PDRAP_SCIAGE
  LET RSCHREPRD OF PDRAP_SCIAGE = DZ_HEURE_2
  DISPLAY RSCHREPRD OF PDRAP_SCIAGE
  ;
  ; Calcul de la prodictivité
  ;
  LET RSCPRD OF PDRAP_SCIAGE = (RSCMC3PRD OF PDRAP_SCIAGE / (RSCHREPRD OF PDRAP_SCIAGE / 100))
  DISPLAY RSCPRD OF PDRAP_SCIAGE
END


