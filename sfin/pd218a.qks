;-------------------------------------------------------------------------------
;
; Rapport de sciage
;

FILE PDRAP_SCIAGE MASTER


;-------------------------------------------------------------------------------
;
; Opérateur sciage
;

FILE PDOPERATEUR_SCIE PRIMARY &
                      NOITEM &
                      OCCURS 11 TIMES

  ACCESS VIA     CIECLE,          &
                 RSCDATPRD,       &
                 QRTCODQRT        &
         USING   T_CIECLEMNU,                         &
                 RSCDATPRD        OF PDRAP_SCIAGE,    &
                 QRTCODQRT        OF PDRAP_SCIAGE     &
         ORDERBY CIECLE,          &
                 RSCDATPRD,       &
                 QRTCODQRT,       &
                 OPENUMEMP,       &
                 OPSHREDEB,       &
                 OPSHREFIN

  ITEM CIECLE       OF PDOPERATEUR_SCIE INITIAL  T_CIECLEMNU
  ITEM RSCDATPRD    OF PDOPERATEUR_SCIE INITIAL  RSCDATPRD OF PDRAP_SCIAGE FIXED
  ITEM QRTCODQRT    OF PDOPERATEUR_SCIE INITIAL  QRTCODQRT OF PDRAP_SCIAGE FIXED
  ITEM OPSDURSECOPE OF PDOPERATEUR_SCIE SUM INTO RSCDUROPE OF PDRAP_SCIAGE
  ITEM OPSDURSECARR OF PDOPERATEUR_SCIE SUM INTO RSCDURARR OF PDRAP_SCIAGE


;-------------------------------------------------------------------------------
;
; Opération de surface validation des plages horraire pour le rapport
;

FILE PDOPERATEUR_SCIE DESIGNER ALIAS OPS_FIC

  ACCESS VIA     CIECLE,          &
                 RSCDATPRD,       &
                 QRTCODQRT,       &
                 OPENUMEMP        &
         USING   T_CIECLEMNU,                          &
                 RSCDATPRD        OF PDOPERATEUR_SCIE, &
                 QRTCODQRT        OF PDOPERATEUR_SCIE, &
                 OPENUMEMP        OF PDOPERATEUR_SCIE

  ;
  ; Sélectionne si une des deux bornes du nouvel enregistrement se retrouve
  ; parmis l'intervale déjà enregistré.
  ;

  SELECT IF (OPSHREDEB OF PDOPERATEUR_SCIE >= OPSHREDEB OF OPS_FIC  &
             AND                                                    &
             OPSHREDEB OF PDOPERATEUR_SCIE < OPSHREFIN OF OPS_FIC) &
            OR                                                      &
            (OPSHREDEB OF PDOPERATEUR_SCIE < OPSHREDEB OF OPS_FIC  &
             AND                                                    &
             OPSHREFIN OF PDOPERATEUR_SCIE > OPSHREDEB OF OPS_FIC) &
            OR                                                      &
            (OPSHREDEB OF PDOPERATEUR_SCIE < OPSHREFIN OF OPS_FIC  &
             AND                                                    &
             OPSHREFIN OF PDOPERATEUR_SCIE > OPSHREFIN OF OPS_FIC )


;-------------------------------------------------------------------------------
;
; Operateur scie (validation des plage horaires)
;

FILE PDOPERATEUR_SCIE DESIGNER ALIAS A_OPS_FIC_2


;-------------------------------------------------------------------------------
;
; Opérateur
;

FILE PDOPERATEUR REFERENCE OCCURS WITH PDOPERATEUR_SCIE

  ACCESS VIA     CIECLE,          &
                 OPENUMEMP        &
         USING   T_CIECLEMNU,     &
                 OPENUMEMP        OF PDOPERATEUR_SCIE


;-------------------------------------------------------------------------------
;
; Raison arret
;

FILE PDRAISON_ARRET REFERENCE OCCURS WITH PDOPERATEUR_SCIE

  ACCESS VIA   CIECLE,          &
               RAACODARR        &
         USING T_CIECLEMNU,     &
               RAACODARR        OF PDOPERATEUR_SCIE


;-------------------------------------------------------------------------------
;
; Code bilingue (quart de travail)
;

FILE VCBI_DSC  REFERENCE &
               ALIAS A_CBI_QRTCODQRT

  ACCESS VIA   XELNOM,                               &
               CBICLE                                &
         USING D_QRTCODQRT,                          &
               QRTCODQRT        OF PDRAP_SCIAGE


