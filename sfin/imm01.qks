@IF FRANCAIS
                LABEL "    Procédures      "
@ELSE
                LABEL "    Procedures      "
@ENDIF

SUBSCREEN imm03 HIDDEN &
                PASSING T_CIECLEMNU , &
                        T_CIENOM    , &
                        T_PECCLEMNU , &
                        T_PECDATDEB , &
                        T_PECDATFIN   &
@IF FRANCAIS
                LABEL "Informations de base"
@ELSE
                LABEL " Basic Information  "
